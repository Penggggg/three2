.com-danmu-tips {
    position: fixed;
    display: flex;
    align-items: center;
    border-radius: 50rpx;
    padding: 0rpx 8rpx 0rpx 10rpx;
    box-sizing: content-box;
    background: rgba(0, 0, 0, 0.2);
}

.cdt-swiper {
    transition: all ease 0.4s;
}

.cdt-item {
    height: 100%;
    display: flex;
    align-items: center;
}

.cdt-avatar {
    border-radius: 50%;
    margin-right: 10rpx;
    position: relative;
    border: 1px solid #fff;
    box-sizing: border-box;
}

