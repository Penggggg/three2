<view class="com-title">

    <image
        mode="aspectFit"
        lazy-load="{{ true }}"
        class="com-title-img"
        src="{{ left$ }}"
    />

    <view 
        class="com-title-text"
        style="font-size: {{ fontSize }}rpx"
    >
        {{ title }}
    </view>

    <image
        mode="aspectFit"
        lazy-load="{{ true }}"
        class="com-title-img"
        src="{{ right$ }}"
    />
</view>