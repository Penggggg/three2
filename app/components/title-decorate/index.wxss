.com-title {
    margin: 20rpx 0 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.com-title-img {
    width: 40rpx;
    height: 40rpx;
    display: block;
}

.com-title-text {
    color: #333;
    font-weight: bold;
    font-size: 29rpx;
    letter-spacing: 0.08em;
    margin: 0 20rpx 0 35rpx;
    position: relative;
}

.com-title-text:after {
    left: -5%;
    width: 110%;
    height: 12rpx;
    content: '';
    bottom: 5rpx;
    position: absolute;
    border-radius: 30rpx;
    background: rgba( 255,107,149, 0.22 );
}