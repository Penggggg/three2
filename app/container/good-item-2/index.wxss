/* container/good-item-2/index.wxss */

.good-item-2 {
    position: relative;
    padding: 20rpx 55rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.gi2-bg-container {
    height: 200rpx;
    border-radius: 8px;
    transform: skewX( 12deg );
    box-shadow: 3px 2px 12px rgba(0, 0, 0, 0.2);
    background: linear-gradient(to right, #d7e3ac, #83c4d6, #469ef8 );
}

.gi2-bg-container.rank1 {
    background: linear-gradient(to right, #d7e3ac, #83c4d6, #469ef8 );
}

.gi2-bg-container.rank2 {
    background: linear-gradient(to right, #e85c71, #ef9975, #fce991 );
}

.gi2-bg-container.rank3 {
    background: linear-gradient(to right, #3f54cc, #a45de1, #dc6382, #ed655f );
}

.gi2-container {
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    position: absolute;
    padding: 20rpx 55rpx;
    box-sizing: border-box;
}

.gi2-img-block {
    top: 10rpx;
    left: 100rpx;
    padding: 0 10rpx 10rpx;
    background: #fff;
    position: absolute;
    border-radius: 5px;
    transform: skewX( 10deg );
    overflow: hidden;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.15);
}

.gi2-img-block.right {
    left: 440rpx;
}

.gi2-img {
    width: 200rpx;
    height: 215rpx;
    transform: skewX( -10deg );
}

.gi2-good-info-block {
    top: 30rpx;
    width: 360rpx;
    left: 340rpx;
    position: absolute;
}

.gi2-good-info-block.right {
    left: 100rpx;
}

.gi2-good-title {
    color: #fff;
    overflow:hidden;
    font-size: 28rpx;
    white-space: nowrap;  
    text-overflow: ellipsis; 
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}

.gi2-good-tag {
    color: #fff;
    overflow:hidden;
    font-size: 24rpx;
    white-space: nowrap;  
    text-overflow: ellipsis; 
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}

.gi2-good-tips {
    color: #fff;
    font-size: 24rpx;
    padding: 2rpx 15rpx;
    display: inline-block;
    border-radius: 10px;
    background: linear-gradient(to right, #ea7672, #ee9876, #e9ab72 );
}

.gi2-price {
    color: #fff;
    display: block;
    font-size: 48rpx;
    margin-top: -8rpx;
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}

.gi2-good-buy-btn {
    top:160rpx; 
    left:530rpx;
    color: #fff;
    z-index: 10;
    font-size: 30rpx;
    background: #000;
    padding: 2rpx 15rpx;
    transform: skewX( 10deg );
    display: inline-block;
    position: absolute;
}

.gi2-good-buy-btn.right {
    left: 260rpx;
}

.gi2-top-label-contianer {
    z-index: 10;
    left: 30rpx;
    top: 160rpx;
    height: 50rpx;
    padding: 0 14rpx;
    position: absolute;
    transform: skewX( 12deg );
    background: linear-gradient(to right, #e9ab72, #ee9876, #ea7672, #e65f73 );
}

.gi2-top-label-contianer.right {
    left: 630rpx;
}

.gi2-top-label {
    color: #fff;
    display: flex;
    font-size: 38rpx;
    align-items: center;
    margin-top: -10rpx;
    font-weight: bold;
    text-shadow:
        0px 1px 0 #444f98, 
        -1px 2px 0 #444f98,
        -2px 3px 0 #444f98;
}

.gi2-top-pre {
  
}

.gi2-rank {
    font-size: 48rpx;
}