    transform: rotate( 22deg );
} */

.tos-compare-total.nocenter {
    justify-content: flex-start;
}

.tos-compare-total-label {
    /* color: #ff5777; */
    color: #bfbfbf;
    font-size: 20rpx;
}

.tos-compare-total-label.right {
    margin-right: 30rpx;
}

.tos-compare-total-label.small {
    margin-right: 10rpx;
}

.tos-compare-total-number {
    font-size: 40rpx;
    /* color: #ff5777; */
    color: #bfbfbf;
    margin-bottom: -5rpx;
}

.tos-compare-total-number.acturely {
    color: #ff5777;
}

.tos-compare-total-number.right {
    margin-right: 30rpx;
}

.tos-compare-total-number.small {
    font-size: 24rpx;
    margin-right: 10rpx;
    margin-bottom: 0rpx;
}

.tos-tips {
    display: flex;
    align-items: center;
    position: relative;
    padding: 0 0 20rpx 40rpx
}

.tos-tips-text {
    color: #666;
    font-size: 22rpx;
    text-align: left;
    margin-left: 20rpx;
}

.tos-trip-item-image {
    width: 25rpx;
    height: 20rpx;
    margin-right: 8rpx;
}

.tos-trip-order-btn-block {
    display: flex;
    align-items: center;
    padding: 20rpx 10rpx 0 10rpx;
    justify-content: space-between;
}

.tos-trip-order-btns {
    display: flex;
    padding: 15rpx 0rpx;
    box-sizing: border-box;
}

.tos-trip-order-btn {
    color: #999;
    font-size: 24rpx;
    padding: 10rpx 20rpx;
    border-radius: 15px;
    border: 1px solid rgba( 0, 0, 0, 0.2 );
}

.tos-trip-order-btn:not(:last-child) {
    margin-right: 20rpx;
}

.tos-order-more {
    /* color: #666; */
    color: #bfbfbf;
    font-size: 22rpx;
}

.tos-trip-order-btn.purple {
    color: #fff;
    /* background: #ff5777; */
    border: none;
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
    background: #bc4e9c;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to right, #f80759, #bc4e9c);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #f80759, #bc4e9c); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */    

}

.tos-tips2-block {
    color: #666;
    font-size: 22rpx;
    padding-left: 10rpx;
}
