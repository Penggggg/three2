.con-trip-order-shoppinglist {
    min-height: 100vh;
    background: #fafafa;
}

.tos-money-block {
    display: flex;
    align-items: center;
    /* background: #ff5777; */
    flex-direction: column;
    justify-content: center;
    padding: 10rpx 0 100rpx;
    background: #bc4e9c;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to bottom, #f80759, #bc4e9c);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to bottom, #f80759, #bc4e9c); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */    
}

.tos-money-title {
    font-size: 20rpx;
    color: rgba( 255, 255, 255, 0.6 );
}

.tos-money-i {
    color: #fff;
    font-size: 78rpx;
    font-weight: bold;
    margin: 25rpx 0;
    /* text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 ); */
    text-shadow: 0px 0px 5px #fbe9de;
}

.tos-order-count {
    color: #fff;
    font-size: 22rpx;
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}

.tos-shoppinglist-block {
    margin-top: -90rpx;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
}

.tos-shoppinglist-item {
    padding: 25rpx 20rpx;
    box-sizing: border-box;
    margin-bottom: 40rpx;
    background: #fff;
    border-radius: 10px;
    box-shadow: 3px 3px 15px rgba(0, 0, 0, 0.08);
}

.tos-good-info-block {
    display: flex;
    position: relative;
}

.tos-shoppinglist-status {
    flex: 1;
    color: #ff5777;
    font-size: 22rpx;
}

.tos-trip-order-img {
    width: 120rpx;
    height: 120rpx;
    padding: 5rpx;
    background: #fff;
    border-radius: 5px;
    /* margin-right: 20rpx; */
    box-shadow: 3px 3px 15px rgba(0, 0, 0, 0.1);
}

.tos-other-info {
    flex: 1;
}

.tos-title-block {
    display: flex;
}

.tos-trip-order-title-block {
    flex: 5;
    margin-right: 30rpx;
    margin-left: 20rpx;
}

.tos-trip-order-name {
    /* color: #666; */
    color: #bfbfbf;
    font-size: 24rpx;
    /* text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 ); */
}

.tos-trip-order-standar {
    /* color: #999; */
    font-size:22rpx;
    border-radius:5px;
    background:#f5f5f5;
    padding:2rpx 15rpx;
    display:inline-block;
    margin-right:10rpx;
    color:#bfbfbf;    
    /* text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 ); */
}

.tos-compare {
    display: flex;
    padding: 15rpx 20rpx 15rpx 0rpx;
    box-sizing: border-box;
    /* margin-bottom: 10rpx; */
}

.tos-compare.small {
    padding: 5rpx 20rpx 5rpx 0rpx;
}

.tos-compare-item {
    flex: 1;
}

.tos-compare-total {
    display: flex;
    position: relative;
    align-items:flex-end;
    justify-content: center;
}

.tos-compare-total.right {
    justify-content: flex-end;
    padding-right: 30rpx;
}

