.ctm-con {
    width: 100vw;
    height: 45vh;
    display: flex;
    overflow: hidden;
    flex-direction: column;
    background: #fff;
    border-radius: 30px 30px 0 0;
    position: relative;
}

.ctm-task-close {
    top: 20rpx;
    right: 30rpx;
    position: absolute;
}

.ctm-title {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    margin: 40rpx 50rpx;

    color: #333;
    font-size: 38rpx;
    font-weight: bold;
    letter-spacing: 0.1em;
}

.ctm-title-countdowm {
    /* right: 7%;
    bottom: 5rpx;
    position: absolute; */
}

.ctm-content {
    flex: 1;
    overflow-y: scroll;
    box-sizing: border-box;
    padding: 0 40rpx 0 30rpx;
}

.ctm-task-item {
    display: flex;
    padding: 35rpx 0;
    /* align-items: flex-start; */
    align-items: center;
    position: relative;
}

.ctm-task-item:first-child {
    padding: 20rpx 0 35rpx;
}

.ctm-task-item:after {
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    transform: scaleY( 0.5 );
    content: '';
    position: absolute;
    background: -webkit-linear-gradient(to right, rgba( 0, 0, 0, 0.1 ), rgba( 0, 0, 0, 0.35 ), rgba( 0, 0, 0, 0.1 ));
    background:linear-gradient(to right, rgba( 0, 0, 0, 0.1 ), rgba( 0, 0, 0, 0.35 ), rgba( 0, 0, 0, 0.1 ));
}

.ctm-task-round {
    width: 25rpx;
    height: 25rpx;
    border-radius: 50%;
    margin-right: 0rpx;
    background: #bc4e9c;
    background:-webkit-linear-gradient(to right, #f80759, #bc4e9c);
    background:linear-gradient(to right, #f80759, #bc4e9c);
}

.ctm-task-round.finished {
    background: rgba( 0, 0, 0, 0.15 );
}

.ctm-img {
    width: 100rpx;
    height: 100rpx;
    margin-right: 35rpx;
    border-radius: 10rpx;
   border: 1px solid rgba( 0, 0, 0, 0.08 ); 
}

.ctm-img.red {
    border:  1px solid #bc4e9c;
}

.ctm-task-title {
    color: #333;
    font-size: 32rpx;
    font-weight: bold;
    line-height: 32rpx;
    margin-bottom: 8rpx;
    letter-spacing: 0.08em;
    display: flex;
    align-items: flex-end;
    white-space: nowrap;
}



.ctm-good-title {
    color: #999;
    width: 200rpx;
    font-size: 24rpx;
    padding-left: 30rpx;
    overflow:hidden; 
    display:-webkit-box; 
    -webkit-line-clamp:1;
    word-break: break-all;
    text-overflow:ellipsis;
    -webkit-box-orient:vertical;
    letter-spacing: 0.05em;
}

.ctm-task-desc {
    color: #999;
    font-size: 24rpx;
    letter-spacing: 0.05em;
    overflow:hidden; 
    display:-webkit-box; 
    -webkit-line-clamp:1;
    word-break: break-all;
    text-overflow:ellipsis;
    -webkit-box-orient:vertical;
}

.ctm-task-info {
    flex: 1;
    position: relative;
}

.ctm-task-good-img-con {
    top: -20rpx;
    left: 130rpx;
    width: 50rpx;
    height: 50rpx;
    overflow: hidden;
    position: absolute;
    border-radius: 5px;
    border: 2px solid #fff;
    box-shadow: 0 0 15px rgba( 0, 0, 0, 0.25 );
}

.ctm-task-good-img {
    width: 100%;
    border-radius: 5px;
    /* border: 2px solid #fff; */
    height: 100%;
    position: absolute;
    /* box-shadow: 0 0 15px rgba( 0, 0, 0, 0.25 ); */
}

.ctm-task-price {
    color: #cd3987;
    font-size: 78rpx;
    line-height: 78rpx;
    font-weight: bold;
    white-space: nowrap;
    /* text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.15 ); */
}

.ctm-task-price.finished {
    color: rgba( 0, 0, 0, 0.10 );
}

.ctm-task-action {
    margin-top: 20rpx;
    margin-left: 35rpx;
    position: relative;
}

.ctm-task-btn {
    line-height:34rpx;
    color: #fff;
    font-size: 28rpx;
    padding: 12rpx 20rpx;
    border-radius: 15px;
    display: block;
    box-sizing: border-box;
    min-width: 80rpx;
    border-radius: 3px;
    background: #bc4e9c;  
    position: relative;
    white-space: nowrap;
    background: -webkit-linear-gradient(to left, #f80759, #bc4e9c); 
    background: linear-gradient(to left, #f80759, #bc4e9c); 
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}


.ctm-task-action.shine:after {
    left: 50%;
    top: 50%;
    content: '';
    height: 100%;
    width: 100%;
    z-index: 1;
    border-radius: 3px;
    position: absolute;
    border: 1px solid #ff7875;
    background-color: transparent;
    transform: translate( -50%, -50% );
    -webkit-animation-name:'ripple';
    -webkit-animation-duration: 1s;
    -webkit-animation-timing-function: ease;
    -webkit-animation-delay: 0s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-direction: normal;
    pointer-events: none;
}

@keyframes ripple {
    0% {
     opcity:75;
     border: 1px solid #ff7875;
   }
   100% {
     opacity: 0;
     border: 6px solid #fff1f0;
   }
 }

.ctm-task-btn.finished {
    color: #bfbfbf;
    background: #f5f5f5;
    text-shadow: none;
}