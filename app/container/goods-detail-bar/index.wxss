/* container/goods-detail-bar/index.wxss */
.con-gbs {
    left: 0;
    bottom: 0;
    width: 100%;
    position: fixed;
}

.gbs-btn-bar {
    width: 100%;
    display: flex;
    background: #fff;
    align-items: center;
    border-top: 1px solid #f5f5f5;
}

.gbs-btn-item {
    display: flex;
    padding: 10rpx 20rpx;
    flex-direction: column;
    align-items: center;
}

.gbs-btn-special {
    flex: 1;
    display: flex;
}

.gbs-btn-item-img {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 10rpx;
}

.gbs-btn-item-text {
    color: #999;
    font-size: 20rpx;
    text-align: center;
}