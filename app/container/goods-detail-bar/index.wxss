/* container/goods-detail-bar/index.wxss */
.con-gbs {
    left: 0;
    bottom: 0;
    height: 100rpx;
    width: 100%;
    position: fixed;
}

.gbs-btn-bar {
    width: 100%;
    display: flex;
    background: #fff;
    align-items: center;
    border-top: 1px solid #f5f5f5;
}

.gbs-btn-item {
    display: flex;
    padding: 10rpx 20rpx;
    flex-direction: column;
    align-items: center;
}

.gbs-btn-special {
    flex: 1;
    display: flex;
    height: 100rpx;
}

.gbs-btn-special-item { 
    flex: 1;
    height: 100%;
    display:flex;
    align-items:center;
    justify-content:center;    
}

.gbs-btn-special-item.grey {
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    background: rgba(0,0,0,0.09);
}

.gbs-btn-special-item.pink {
    color: #ff5777;
    font-size: 32rpx;
    text-align: center;
    background: #ffe8ee;
}

.gbs-btn-special-item.morepink {
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    background: #ff5777;
}

.gbs-btn-item-img {
    width: 45rpx;
    height: 45rpx;
    margin-bottom: 10rpx;
}

.gbs-btn-item-text {
    color: #999;
    font-size: 20rpx;
    text-align: center;
}