<view 
    class="con-good-poster"
    catchtouchmove="preventTouchMove"
>

    <!-- 画布 -->
    <view 
        class="cgp-canvas-block {{ !show ? 'hide' : '' }}"
    >

        <!-- 画布 -->
        <view class="cgp-canvas-con">
            <canvas 
                id="c1"
                canvas-id='c1'
                class="cgp-canvas"
                style="height:{{ canvasHeight }}px"
            />
        </view>
        
        <!-- 两个按钮 -->
        <view class="cgp-btn-block">
            
            <view class="cgp-btn mr">
                <image
                    class="cgp-btn-img"
                    src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/icon-wechat2.png"
                />
                <button
                    open-type="share"
                    class="cgp-share-btn"
                >
                </button>
            </view>

            <view 
                bindtap="save"
                class="cgp-btn mr"
            >
                <image
                    class="cgp-btn-img"
                    src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/icon-pengyouquan2.png"
                />
            </view>

            <!-- 关闭按钮 -->
            <view 
                bindtap="toggle"
                class="cgp-close-btn"
            >
                <image
                    class="cgp-btn-img small"
                    src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/icon-close2.png"
                />
            </view>

        </view>


    </view>

    <!-- 分享按钮 -->
    <!-- animation="{{ animationMiddleHeaderItem }}" -->
    <form
        class="cgp-toggle-btn"
        bindsubmit="toggle"
        report-submit="{{ true }}"
    >
        <!-- 管理员跳到海报 -->
        <button
            wx:if="{{ isAdmin }}"
            form-type="submit"
            class="formid-btn"
        >   
           <image
                class="cgp-icon-img"
                src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/icon-share-2.png"
            />
        </button>

        <!-- 非管理员直接转发 -->
        <button
            wx:else
            open-type="share"
            class="formid-btn"
        >   
           <image
                class="cgp-icon-img"
                src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/icon-share-2.png"
            />
        </button>

        <!-- 文字提示 -->
        <view
            class="cgp-tips {{ showTips && tipsIndex !== null ? '' : 'hide' }}"
        >
            {{ tipsText }}
        </view>
    </form>



</view>