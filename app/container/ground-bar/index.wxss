/* container/tdb-bar/index.wxss */
.con-tdb-bar {
  
    left: 4vw;
    bottom: 0;
    width: 92vw;
    position: fixed;
    display: flex;
    align-items: center;
    background: #fff;
    box-sizing: border-box;
    border-radius: 5px 5px 0 0 ;
    z-index: 1;
    box-shadow: 0 0 15px rgba( 0, 0, 0, 0.08 );

}

.flex-1 {
  flex: 1;
}
   
  .con-tdb-item {
    /* flex: 1; */
    display: flex;
    padding: 15rpx !important;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    overflow: hidden;
  }
  
  .con-tdb-bar-img {
    width: 50rpx;
    height: 50rpx;
  }
  
  .con-tdb-text {
    color: #bfbfbf;
    margin-top: 10rpx;
    line-height: 24rpx;
    font-size: 24rpx;
    font-weight: 200;
  }
  
  .con-tdb-text.active {
    color: #999;
  }

  .fix-btn {
    background: transparent;
    outline:none;
    border:none;
    list-style: none;
    padding: 0;
    line-height: normal;
    overflow: visible;
    text-align: left;
}

.fix-btn:after {
    border:none;
}