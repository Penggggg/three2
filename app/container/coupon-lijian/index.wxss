.con-coupon-lijian {
    top: 0;
    left: 0;
    position: fixed;
    z-index: 100000;
}

.con-lj-bg {
    width: 100vw;
    height: 100vh;
    position: relative;
    background: rgba( 0, 0, 0, 0.4 );
}

.con-lj-hongbao-block {
    top: 50%;
    left: 50%;
    width: 550rpx;
    height: 780rpx;
    display: flex;
    flex-direction: column;
    border-radius: 8px;
    background: #bf5a44;
    position: absolute;
    transform: translate( -50%, -50% );
}

.con-lj-close {
    top: 10rpx;
    right: 15rpx;
    z-index: 1000;
    position: absolute;
}

.con-lj-hongbao-1 {
    height: 70%;
    position: relative;
    background: #ca6148;
    border-radius: 8px 8px 150px 150px;
    border-bottom: 2px solid #b9553d;
}

.con-lj-hongbao-round {
    left: 50%;
    bottom: 30%;
    width: 1000rpx;
    height: 1000rpx;
    border-radius: 50%;
    background: #000;
    position: absolute;
    transform: translate( -50%, 0 );
}

.con-lj-title-big {
    color: #e7ce9f;
    font-size: 60rpx;
    text-align: center;
    padding: 60rpx 0 65rpx;
}

.con-lj-title {
    color: #e7ce9f;
    font-size: 36rpx;
    text-align: center;
}

.con-lj-title.small {
    font-size: 24rpx;
    margin-bottom: 5rpx;
}

.con-lj-inline-big {
    display: inline;
    font-size: 55rpx;
}

.con-lj-share {
    display: flex;
    left: 50%;
    bottom: -70rpx;
    align-items: center;
    justify-content: center;
    width: 100rpx;
    height: 100rpx;
    padding: 60rpx;
    font-size: 60rpx;
    color: #333;
    text-align: center;
    position: absolute;
    background: #e7ce9f;
    border-radius: 50%;
    transform: translate( -50%, 0 );
    white-space: nowrap;
}

.con-lj-share::after {
    top: 50%;
    left: 50%;
    width: 85%;
    height: 85%;
    content: '';
    background: transparent;
    position: absolute;
    border-radius: 50%;
    border: 1px solid #dbbf98;
    transform: translate( -50%, -50% );
}

.con-lj-hongbao-2 {
    flex: 1;
    position: relative;
}

.con-lj-tips {
    left: 0;
    width: 100%;
    bottom: 45rpx;
    position: absolute;
}