.good-item-9-form {
    width: 100%;
    position: relative;
}

.con-good-item-9 {
    display: flex;
    padding: 25rpx 20rpx !important;
    margin-bottom: 50rpx;
    border-radius: 8px;
    box-sizing: border-box;
    box-shadow: 3px 3px 15px rgba(0, 0, 0, 0.1 );
}

.con-good-item-9.right {
    padding: 25rpx 20rpx 25rpx 50rpx;
    flex-direction: row-reverse;
}

.gi9-img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 5px;
    border: 2px solid #fff;
}

.gi9-info-block {
    flex: 1;
    text-align: left;
    margin-left: 30rpx;
}

.gi9-info-block.right {
    margin-left: 0rpx;
    margin-right: 30rpx;
}

.gi9-text {
    overflow: hidden; 
    display: -webkit-box; 
    -webkit-line-clamp: 1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
}

.gi9-title {
    color: #333;
    font-weight: bold;
    font-size: 26rpx;
    line-height: 40rpx;
    
}

.gi9-name {
    color: rgba(0, 0, 0, 0.6 );
    font-size: 24rpx;
    line-height: 38rpx;
}

.gi9-detail {
    color: rgba(0, 0, 0, 0.45 );
    font-size: 24rpx;
    line-height: 38rpx;
    margin: 22rpx 0 0;
    -webkit-line-clamp: 2;
}

.gi9-action-block {
    display: flex;
    margin-top: 35rpx;
    align-items: center;
    justify-content: space-between;
}

.gi9-price {
    color: #666;
    font-weight: bold;
    font-size: 26rpx;
}

.gi9-btn {
    color: #fff;
    font-size: 21rpx;
    border-radius: 3px;
    white-space: nowrap;
    padding: 10rpx 30rpx;
    text-shadow: 0 0 2px rgba(0, 0, 0, 0.2 );
    box-shadow: 3px 3px 15px rgba(0, 0, 0, 0.18 );
    /* background-image: linear-gradient(to right, #f78ca0 0%, #f9748f 19%, #fd868c 60%, #fe9a8b 100%); */
    background: #eb4d4a;
}

.gi9-group-price {
    color: #fff;
    font-size: 24rpx;
}

.fix-btn {
    background: transparent;
    outline:none;
    border:none;
    list-style: none;
    padding: 0;
    line-height: normal;
    overflow: visible;
    text-align: left;
}

.fix-btn:after {
    border:none;
}

.gi9-swiper {
    height: 60rpx;
    width: 70rpx;
}

.gi9-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.gi9-member-block {
    display: flex;
    align-items: center;
}

.gi9-members {
    flex: 1;
    white-space: nowrap;
    flex-wrap: nowrap;
    padding: 0 20rpx;
    overflow-y: hidden;
    box-sizing: border-box;
}

.gi9-price-big {
    font-size: 35rpx;
    color: #eb4d4a;
    font-weight: bold;
    margin-right: 15rpx;
}

.gi9-img-block {
    position: relative;
}

.gi9-tag {
    top: 0;
    left: 0;
    color: #fff;
    font-size: 22rpx;
    position: absolute;
    padding: 0rpx 12rpx;
    background: #eb4d4a;
}