/* container/manager-entry-btn/index.wxss */

.con-manager-entry-btn-form {
  padding: 0;
  border-radius: 50%;
}

.con-manager-entry-btn-container {
  right: 50rpx;
  bottom: 200rpx;
  position: fixed;
  border-radius: 50%;
  z-index: 10;
  padding: 0;
  box-shadow: 3px 3px 10px rgba(0,0,0,0.20);
}

.con-manager-entry-drawer {
  height: 100vh;
  width: 75vw;
  display: flex;
  z-index: 1000;
  background: #fff;
  flex-direction: column;
}

.con-manager-entry-btn-list {
  flex: 1;
  overflow-y: scroll;
}

.con-manager-entry-btn-small-list {
  display: flex;
  padding-bottom: 20rpx;
}

.con-manager-entry-drawer-list-item {
  /* flex: 1; */
}

.con-manager-entry-btn-list-item {
  background: #fff;
  margin-bottom: 30rpx;
}

.con-manager-entry-btn-list-item:last-child {
  margin: 0;
}

.con-manager-entry-btn-list-check {
  display: flex;
  align-items: center;
  background: transparent;
  padding: 0;
  border-radius: 0;
  outline:none;
  border:none;
  list-style: none;
}

.con-manager-entry-btn-list-check:after {
  border:none;
}

.con-manager-entry-btn-list-image {
  width: 102rpx;
  height: 102rpx;
  margin-left: 30rpx;
}

.radius {
  border-radius: 50%;
}

.con-manager-entry-btn-item {
  flex: 1;
}
.con-manager-entry-btn-list-image {
  width: 102rpx;
  height: 102rpx;
  /* background: #d8d8d8; */
}

.manager-entry-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  width: 100rpx;
  border-radius: 100rpx;
  height:100rpx;
  line-height:100rpx;
  background: #ff8787; 
  overflow: hidden;
  background: -webkit-linear-gradient(to bottom, #ff61ab, #ff8787); 
  background: linear-gradient(to bottom, #ff61ab, #ff8787); 
  
}

.con-manager-entry-btn-small-item {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  justify-content:center;
}

.con-manager-entry-btn-small-img {
  width: 55rpx;
  height: 55rpx;
  margin-right: 15rpx;
}

.con-manager-entry-btn-small-text {
  color: #999;
  font-size: 22rpx;
}