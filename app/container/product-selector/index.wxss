/* container/product-selector/index.wxss */
.text {
    color: #666;
    font-size: 26rpx;
    line-height: 30rpx;
}

.modal-container {
    padding: 0 35rpx;
}

.search-header {
    width: 100%;
    z-index: 100;
    position: relative;
    background: #fff;
    margin-bottom: 15rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid rgba( 0, 0, 0, 0.1 );
}

.search-icon {
    left: 10rpx;
    top: 5rpx;
    position: absolute;
}

.search-input {
    color: #999;
    font-size: 30rpx;
    text-align: left;
    padding: 0rpx 25rpx 20rpx 60rpx;  
}

.tips {
    color: #999;
    margin: 15rpx;
    text-align: center;
    font-size: 24rpx;
}

.result-list {

    min-height: 200rpx;
    max-height: 550rpx;
}

.result-item {
    display: flex;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
    border-bottom: 1px dotted rgba( 0, 0, 0, 0.1 );
}

.result-item.selected {
    background: #ffe8ee;
}

.result-item-img {
    width: 150rpx;
    height: 150rpx;
    background: #fff;
    border-radius: 5px;
    margin-right: 15rpx;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
}

.result-item-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.result-item-title {
    color: #666;
    text-align: left;
    font-size: 32rpx;
    overflow:hidden; 
    display:-webkit-box; 
    -webkit-line-clamp:1;
    margin-bottom: 10rpx;
    word-break: break-all;
    text-overflow:ellipsis;
    -webkit-box-orient:vertical;
}

.result-item-tips {
    display: flex;
}

.product-price {
    color: #ff5777;
    font-size: 32rpx;
}

.result-item-count {
    color: #666;
    margin-right: 10rpx;
    font-size: 26rpx;
}

.item-price-block {
    text-align: left;
}
