.gd-compare-modal {
    width: 80vw;
    background: #fff;
    border-radius: 30px;
    box-sizing: border-box;
}

.gd-compare-con {
    display: flex;
    align-items: center;
    position: relative;
}

.gd-compare-side {
    flex: 1;
    display: flex;
    height: 675rpx;
    align-items: center;
    flex-direction: column;
    box-sizing: border-box;
    position: relative;
}

.gd-compare-side.left {
    padding: 140rpx 0 0;
    background: #f3aca8;
    border-radius: 30px 0 0 0;
}

.gd-compare-side.right {
    padding: 220rpx 0 0;
    background: #bee7e1;
    border-radius: 0 30px 0 0;
}

.gd-compare-title {
    color: #fff;
    font-size: 55rpx;
    font-weight: bold;
    letter-spacing: 0.2em;
    margin-bottom: 15rpx;
    text-shadow: 0px 0px 3px rgba( 0, 0, 0, 0.15 );
}

.gd-compare-title.black {
    color: #33304d;
    text-shadow: none;
}

.gd-compare-price {
    color: #fff;
    font-size: 38rpx;
    font-weight: bold;
}

.gd-compare-price.black {
    color: #33304d;
}

.gd-compare-price.mr {
    margin-right: 20rpx;
}

.gd-compare-price.small {
    font-size: 30rpx;
}

.gd-compare-tips {
    top: 30rpx;
    color: #fff;
    font-size: 26rpx;
    position: absolute;
    letter-spacing: 0.05em;
    padding: 10rpx 20rpx;
    border-radius: 30px;
    background: #202020;
    box-shadow: 3px 3px 15px rgba( 0, 0, 0, 0.4 );
}

.gd-compare-tips.left {
    left: 30rpx;
}

.gd-compare-tips.right {
    right: 30rpx;
}

.gd-compare-icon {
    left: 50%;
    bottom: 0;
    width: 300rpx;
    height: 400rpx;
    position: absolute;
    transform: translate( -50%, 0 );
}

.gd-compare-btn-con {
    padding: 60rpx 0rpx;
}

.gd-compare-pin-tips {
    color: #666;
    font-size: 24rpx;
    text-align: center;
    letter-spacing: 0.2em;
}

.gd-compare-pin-tips.mt {
    margin-top: 50rpx;
}

.gd-compare-pin-tips.mb {
    margin-bottom: 50rpx;
}

.gd-compare-btn {
    left: 50%;
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    bottom: -120rpx;
    background: #fff;
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: translate( -50%, 0 );
    box-shadow: 0 0 10rpx rgba( 255, 255, 255, 0.5 );

}

.gd-compare-btn-icon {
    line-height: 24rpx;
}

.gd-compare-con-line {
    top: 0;
    left: 50%;
    width: 1px;
    height: 100%;
    position: absolute;
    background: #fff;
    transform: translate( -50%, 0 );
}

.gd-compare-con-ball {
    left: 50%;
    bottom: 20rpx;
    width: 50rpx;
    height: 50rpx;
    background: #fff;
    position: absolute;
    border-radius: 50%;
    transform: translate( -50%, 0 );
    box-shadow: 0 0 15px rgba( 0, 0, 0, 0.08 );
}

.gd-compare-con-ball.big {
    width: 80rpx;
    height: 80rpx;
    bottom: 35rpx;
}

.gd-compare-socail-tips {
    left: 50%;
    bottom: 130rpx;
    color: #fff;
    font-size: 23rpx;
    padding: 10rpx 20rpx;
    border-radius: 8px;
    position: absolute;
    background: rgba( 0, 0, 0, 0.2 );
    transform: translate( -50%, 0 );
    letter-spacing: 0.1em;
}

.pd-other-title {
    margin: 50rpx 0 50rpx;
}

.gd-compare-socail-tips:after {
    bottom: -26rpx;
    left: 50rpx;
    content: '';
    position: absolute;
    width:0px;
    height:0px;
    border-top: 18rpx solid rgba(0,0,0,0.2);
    border-right: 12rpx solid  rgba(0,0,0,0);
    border-bottom: 12rpx solid rgba( 0, 0, 0, 0 );
    border-left: 12rpx solid  rgba(0,0,0,0);
}

.gd-compare-arrow {
    bottom: 16rpx;
    position: absolute;
}

.gd-compare-arrow.left {
    left: 50%;
    transform: translate( -70rpx, 0 );
}

.gd-compare-arrow.right {
    right: 50%;
    transform: translate( 70rpx, 0 );
}

.gd-compare-content-con {

    position: relative;

}

.gd-compare-content {
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    position: absolute;
}

.pgd-swiper {
    left: 0;
    top: 70rpx;
    height: 700rpx;
    width: 100%;
    position: absolute;
} 

.pgd-swiper-item {
    height: 100%;
    position: relative;
    padding: 50rpx 50rpx 0;
    box-sizing: border-box;
}

.pgd-good-con {
    position: relative;
    border-radius: 5px;
    border: 10rpx solid #fff;
}

.pgd-swiper-img {
    width: 100%;
    display: block;
    height: 400rpx;
}

.pgd-good-title {
    left: 0;
    bottom: 0;
    width: 100%;
    color: #fff;
    font-size: 24rpx;
    position: absolute;
    box-sizing: border-box;
    letter-spacing: 0.15em;
    background: rgba( 0, 0, 0, 0.2 );
    padding: 12rpx 20rpx;
    overflow :hidden; 
    display: -webkit-box; 
    -webkit-line-clamp:1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    white-space: nowrap;
}

.pgd-good-desc-con {
    margin: 30rpx 0 0;
    position: relative;
}

.pgd-good-desc-bg {
    width: 100%;
    height: 90rpx;
}

.pgd-good-desc {
    top: 20rpx;
    left: 0;
    width: 100%;
    /* height: 100%; */
    color: #fff;
    font-size: 40rpx;
    font-weight: bold;
    letter-spacing: 0.08em;
    text-align: center;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.25);
    position: absolute;
}

.pgd-good-btn {
    left: 0;
    bottom: 10rpx;
    width: 100%;
    color: #666;
    font-size: 28rpx;
    text-align: center;
    position: absolute;
    letter-spacing: 0.2em;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
}

.pgd-good-btn-icon {
    width: 40rpx;
    height: 40rpx;
    margin-left: 10rpx;
    display: inline-block;
}

.pgd-good-tips-con {
    top: 30rpx;
    right: 30rpx;
    width: 60rpx;
    height: 60rpx;
    position: absolute;
}

.pgd-good-tips-bg {
    width: 60rpx;
    height: 60rpx;
}

.pgd-good-tips {
    top: 3rpx;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 28rpx;
    font-weight: bold;
    position: absolute;
}