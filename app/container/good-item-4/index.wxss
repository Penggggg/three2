.good-item-4-form {
    width: 100%;
    /* margin-bottom: 30rpx; */
}

.good-item-4 {
    width: 100%;
    padding: 10rpx 25rpx !important;
    box-sizing: border-box;
    margin-bottom: 30rpx;
    text-align: left;
}

.good-item-4-container {
    position: relative;
    background: #fff;
    padding: 15rpx 25rpx;
    box-sizing: border-box;
    border-radius: 3px;
    border: 1px solid rgba( 0, 0, 0, 0.05 );
}

.gi4-image-block {
    top: -8%;
    left: 5%;
    width: 30%;
    height: 116%;
    position: absolute;
}

.gi4-image {
    width: 100%;
    height: 100%;
    border-radius: 3px;
    border: 2px solid #fff;
    box-shadow: 3px 3px 25px rgba( 0, 0, 0, 0.1 );
}

.gi4-image-block.right {
    left: 64%;
}

.gi4-info-block {
    display: flex;
    height: 145rpx;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    padding-left: 40%;
}

.gi4-info-block.right {
    padding-left: 20rpx;
    padding-right: 40%;
    /* text-align: right !important; */
}

.gi4-title {
    color: #4d4d4d;
    font-size: 22rpx;
    overflow: hidden; 
    display: -webkit-box; 
    -webkit-line-clamp: 1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    margin-bottom: 5rpx;
    font-weight: 400;
    letter-spacing: 0.05em;
}

.gi4-tag {
    font-size: 21rpx;
    color: rgba( 0, 0, 0, 0.5 );
    letter-spacing: 0.05em;
}

.gi4-price-block {
    display: flex;
    align-items: flex-end;
}

.gi4-price-low, 
.gi4-price {
    color: #aa3f37;
    font-size: 34rpx;
    position: relative;
}

.gi4-price {
    margin-right: 15rpx;
}

.gi4-fadeprice {
    color: #bfbfbf;
    font-size: 24rpx;
}

.gi4-action-block {
    display: flex;
    align-items: flex-end;
    box-sizing: border-box;
    padding-left: 15rpx;
    justify-content: space-between;
}

.gi4-buy-btn {
    color: #fff;
    font-size: 22rpx;
    border-radius: 3px;
    padding: 10rpx 20rpx;
    background: rgb(131, 194, 199);
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}

.gi4-price-low-img {
    top: -10rpx;
    left: -32rpx;
    width: 50rpx;
    position: absolute;    
}

.gi4-tag-block {
    top: -8rpx;
    left: -8rpx;
    display: flex;
    align-items: center;
    position: absolute;
    border-radius: 3px;
    padding: 3rpx 5rpx;
    min-height: 26rpx;
    background: #ff8787; 
    background: -webkit-linear-gradient(to right, #ff61ab, #ff8787); 
    background: linear-gradient(to right, #ff61ab, #ff8787); 
}

.gi4-activity-icon {
    width: 20rpx;
    max-height: 30rpx;
    margin-right: 2rpx;
    display: inline-block;
}

.gi4-tag-text {
    color: #fff;
    font-size: 17rpx;
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );

}

.fix-btn {
    background: transparent;
    outline:none;
    border:none;
    list-style: none;
    padding: 0;
    line-height: normal;
    overflow: visible;
    /* text-align: left; */
}

.fix-btn:after {
    border:none;
}