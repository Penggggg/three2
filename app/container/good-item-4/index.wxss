.good-item-4 {
    width: 100vw;
    margin-bottom: 30rpx;
    padding: 10rpx 25rpx;
    box-sizing: border-box;
}

.good-item-4-container {
    position: relative;
    background: #fff;
    padding: 15rpx 25rpx;
    box-sizing: border-box;
    border-radius: 3px;
    border: 1px solid rgba( 0, 0, 0, 0.05 );
}

.gi4-image {
    top: -8%;
    left: 5%;
    height: 116%;
    max-width: 30%;
    border-radius: 3px;
    position: absolute;
    border: 2px solid #fff;
    box-shadow: 3px 3px 25px rgba( 0, 0, 0, 0.1 );
}

.gi4-image.right {
    left: 64%;
}

.gi4-info-block {
    display: flex;
    height: 145rpx;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    padding-left: 40%;
}

.gi4-info-block.right {
    padding-left: 20rpx;
    padding-right: 40%;
}

.gi4-title {
    color: #4d4d4d;
    font-size: 22rpx;
    overflow: hidden; 
    display: -webkit-box; 
    -webkit-line-clamp: 1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    margin-bottom: 5rpx;
    font-weight: 400;
    letter-spacing: 0.05em;
}

.gi4-tag {
    font-size: 21rpx;
    color: rgba( 0, 0, 0, 0.5 );
    letter-spacing: 0.05em;
}

.gi4-price-block {
    display: flex;
    align-items: flex-end;
}

.gi4-price-low, 
.gi4-price {
    color: #aa3f37;
    font-size: 34rpx;
    position: relative;
}

.gi4-price {
    margin-right: 15rpx;
}

.gi4-fadeprice {
    color: #bfbfbf;
    font-size: 24rpx;
}

.gi4-action-block {
    display: flex;
    align-items: flex-end;
    box-sizing: border-box;
    padding-left: 15rpx;
    justify-content: space-between;
}

.gi4-buy-btn {
    color: #fff;
    font-size: 22rpx;
    border-radius: 3px;
    padding: 10rpx 20rpx;
    background: rgb(131, 194, 199);
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}

.gi4-price-low-img {
    top: -10rpx;
    left: -32rpx;
    width: 50rpx;
    position: absolute;    
}