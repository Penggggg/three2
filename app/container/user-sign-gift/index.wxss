.pm-checkin-block {
    padding: 30rpx;
    margin-top: 40rpx;
    box-sizing: border-box;
}

.pm-checkin-container {
    border-radius: 8px;
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
    padding: 50rpx 30rpx;
    background-image: linear-gradient( 225deg, #D4FFEC 0%, #57F2CC 48%, #4596FB 100%);
}

.pm-checkin-title {
    color: #fff;
    font-size: 26rpx;
    line-height: 36rpx;
    position: relative;
    display: inline-block;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.15 );
}

.pm-checkin-sum {
    display: flex;
    align-items: flex-end;
    margin-bottom: 20rpx;
}

.pm-checkin-gift-tips {
    color: #fff;
    font-size: 24rpx;
    margin-left: 10rpx;
    line-height: 40rpx;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.15 );
}

.pm-checkin-price {
    color: #fff;
    font-size: 70rpx;
    line-height: 83rpx;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.15 );
}

.pm-checkin-tips {
    font-size: 20rpx;
    background: #fff;
    padding: 10rpx 12rpx;
    border-radius: 30px;
    color: #fff;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.15 );
    box-shadow: 3px 3px 15px rgba( 0, 0, 0, 0.25 );
    background-image: linear-gradient( -225deg, #209cff 0%, #68e0cf 60%, #68e0cf 100%);
    /* background-image: linear-gradient( -225deg, #4facfe 0%, #00f2fe 100%); */
    /* background-image: linear-gradient(120deg, #48c6ef 0%, #48c6ef 100%); */
    /* background-image: linear-gradient( -225deg, #007adf 0%, #00ecbc 100%); */
    /* background-image: linear-gradient(-225deg, #77FFD2 0%, #6297DB 48%, #1EECFF 100%); */
    /* background-image: linear-gradient(to left, #9EFBD3 0%, #57E9F2 48%, #45D4FB 100%); */
}

.pm-checkin-tips-price {
    font-size: 24rpx;
    display: inline-block;
    margin-left: 6rpx;
}

.pm-checkin-bar {
    margin: 0 0 30rpx;
}

.pm-checkin-user {
    display: flex;
    margin-bottom: 50rpx;
    align-items: flex-start;
    justify-content: space-between;
}

.pm-checkin-class {
    color: #fff;
    font-size: 25rpx;
    line-height: 40rpx;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.15 );
}

.pm-checkin-class.start {
    display: flex;
    align-items: flex-end;
}

.pm-checkin-class.big {
    font-size: 26rpx;
    /* font-weight: bold; */
}

.pm-checkin-class.small {
    font-weight: bold;
}

.pm-checkin-class-tips {
    font-size: 32rpx;
    margin-left: 3rpx;
    font-weight: bold;
    display: inline-block;
}

.pm-checkin-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 8rpx;
    display: inline-block;
}

.pm-checkin-task-icon {
    width: 60rpx;
    height: 60rpx;
    margin-right: 15rpx;
    display: inline-block;
}

.pm-checkin-task-text {
    color: #666;
    font-size: 24rpx;
    line-height: 34rpx;
    margin-right: 20rpx;
}

.pm-checkin-task-get {
    color: #ff0844;
    font-size: 26rpx;
    font-weight: bold;
}

.pm-checkin-interal-tips {
    opacity: 100;
    top: -10rpx;
    right: -140rpx;
    color: #fff;
    font-size: 22rpx;
    padding: 5rpx 10rpx;
    position: absolute;
    border-radius: 30px;
    text-align: center;
    background: rgba( 0, 0, 0, 0.25 );
    pointer-events: none;
    transition: all ease 0.4s;
}

.pm-checkin-interal-tips:after {
    bottom: -11rpx;
    left: 25rpx;
    content: '';
    width: 0;
    height: 0;
    position: absolute;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 12rpx solid rgba( 0, 0, 0, 0.25 );
}

.pm-checkin-interal-tips.hide {
    opacity: 0;
}

.pm-checkin-task {
    display: flex;
    border-radius: 5px;
    background: #fff;
    align-items: center;
    padding: 25rpx 15rpx;
    margin-bottom: 25rpx;
    justify-content: space-between;
}

.pm-checkin-task.nmb {
    margin-bottom: 0;
}

.pm-checkin-task-content {
    display: flex;
    align-items: center;
}

.pm-checkin-task-count {
    border-radius: 30px;
    padding: 5rpx 22rpx;
    background: #f5222d;
    position: relative; 
    background-image: linear-gradient(-225deg, #ff0844 0%, #ffb199 100%);
}

.pm-checkin-task-count.shine:after {
    left: 50%;
    top: 50%;
    content: '';
    height: 100%;
    width: 100%;
    z-index: 1;
    border-radius: 30px;
    position: absolute;
    border: 1px solid #ff7875;
    background-color: transparent;
    transform: translate( -50%, -50% );
    -webkit-animation-name:'ripple2';
    -webkit-animation-duration: 1s;
    -webkit-animation-timing-function: ease;
    -webkit-animation-delay: 0s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-direction: normal;
    pointer-events: none;
}

.pm-checkin-task-btn {
    color: #fff;
    font-size: 24rpx;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.15 );
}

@keyframes ripple2 {
    0% {
     opcity:75;
     border: 1px solid #ff7875;
   }
   100% {
     opacity: 0;
     border: 6px solid #fff1f0;
   }
}