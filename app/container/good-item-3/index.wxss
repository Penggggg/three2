/* container/good-item-3/index.wxss */
.good-item-3 {
    width: 320rpx;
    margin: 18rpx 15rpx;
    position: relative;
    border-radius: 5px;
    display: inline-block;
    padding-bottom: 20rpx;
    border: 1px solid rgba( 0, 0, 0, 0.05 );
    /* box-shadow: 3px 2px 12px rgba(0, 0, 0, 0.2); */
    box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.10);
}

.g2-img-block {
    /* height: 250rpx; */
}

.gi3-image {
    width: 100%;
    height: 280rpx;
    border-radius: 5px 5px 0 0;
}

.gi3-title {
    width: 100%;
    color: rgba( 0, 0, 0, 0.53 );
    font-size: 28rpx;
    overflow: hidden; 
    display: -webkit-box; 
    -webkit-line-clamp: 2;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    margin-bottom: 25rpx;
    position: relative;
    text-indent: 105rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.gi3-tips-label {
    top: 287rpx;
    left: 20rpx;
    font-weight: bold;
    font-size: 20rpx;
    position: absolute;
    padding: 2rpx 5rpx;
    border: 2px solid;
    border-bottom: 3px solid;
    border-radius: 4px;
    -webkit-background-clip: text;
    border-image: linear-gradient(to right, #487be6, #6328d9, #f93175 );
    border-image-slice: 1;
    -webkit-text-fill-color: transparent;
    background-image: -webkit-linear-gradient( left, #487be6, #6328d9, #f93175 );
    box-shadow:
        0px 1px 0 #f93175, 
        1px 0px 0 #f93175, 
        2px 1px 0 #f93175;
}

.gi3-fadeprice {
    font-size: 20rpx;
    text-indent: 20rpx;
    display: flex;
    align-items: flex-end;
    color: rgba( 0, 0, 0, 0.4 );
}

.gi3-price-block {
    color: #ff4d4f;
    font-size: 20rpx;
    text-indent: 20rpx;
    margin-top: -8rpx;
}

.gi3-price {
    font-size: 30rpx;
    text-indent: 0rpx;
    display: inline-block;
}

.gi3-label {
    top: 0;
    left: 0;
    color: #fff;
    padding: 0 10rpx;
    font-size: 24rpx;
    background: #ff5777;
    position: absolute;
    border: 5px 0px 0 0;
}

.gi3-social-trip-member {
    right: 5rpx;
    bottom: 18rpx;
    display: flex;
    align-items: center;
    padding: 5rpx 10rpx;
    border-radius: 20px;
    position: absolute;
    background: rgba( 0, 0, 0, 0.45 );
}

.gi3-swiper-image {
    width: 30rpx;
    height: 30rpx;
    padding: 5rpx;
    background: #fff;
    border-radius: 50%;
    /* box-shadow: 5px 5px 10px rgba( 0, 0, 0, 0.2 ); */
}

.gi3-swiper-image.child {
    margin-left: -10rpx;
}

.gi3-info {
    color: #fff;
    font-size: 20rpx;
    margin-left: 5rpx;
}