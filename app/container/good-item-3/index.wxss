/* container/good-item-3/index.wxss */
.good-item-3 {
    width: 318rpx;
    margin: 18rpx 15rpx;
    position: relative;
    border-radius: 5px;
    display: inline-block;
    padding-bottom: 10rpx;
    border: 1px solid rgba( 0, 0, 0, 0.05 );
    /* box-shadow: 3px 2px 12px rgba(0, 0, 0, 0.2); */
    /* box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.10); */
}

.g2-img-block {
    /* height: 250rpx; */
}

.gi3-image {
    width: 100%;
    height: 280rpx;
    border-radius: 5px 5px 0 0;
}

.gi3-title {
    width: 100%;
    color:#4d4d4d;
    font-size:22rpx;
    overflow: hidden; 
    display: -webkit-box; 
    -webkit-line-clamp: 2;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    margin-bottom: 25rpx;
    position: relative;
    text-indent: 105rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    letter-spacing:0.05em;

}

.gi3-tips-label {
    top: 287rpx;
    left: 20rpx;
    font-weight: bold;
    font-size: 20rpx;
    position: absolute;
    padding: 2rpx 5rpx;
    border: 2px solid;
    border-bottom: 3px solid;
    border-radius: 4px;
    -webkit-background-clip: text;
    border-image: linear-gradient(to right, #487be6, #6328d9, #f93175 );
    border-image-slice: 1;
    -webkit-text-fill-color: transparent;
    background-image: -webkit-linear-gradient( left, #487be6, #6328d9, #f93175 );
    box-shadow:
        0px 1px 0 #f93175, 
        1px 0px 0 #f93175, 
        2px 1px 0 #f93175;
}

.gi3-fadeprice {
    font-size: 20rpx;
    text-indent: 20rpx;
    display: flex;
    align-items: flex-end;
    margin-bottom: 10rpx;
    color: rgba( 0, 0, 0, 0.4 );
}

.gi3-price-block {
    display: flex;
    align-items: flex-end;
    color: #ff4d4f;
    font-size: 20rpx;
    text-indent: 20rpx;
    margin-top: -8rpx;
}

.gi3-price {
    margin-right: 5rpx;
    font-size: 30rpx;
    text-indent: 0rpx;
    line-height: 36rpx;
    display: inline-block;
}

.gi3-label {
    top: 0;
    left: 0;
    color: #fff;
    padding: 0 10rpx;
    font-size: 21rpx;
    background: #ff5777;
    position: absolute;
    border: 5px 0px 0 0;
}

.gi3-social-trip-member {
    right: 5rpx;
    bottom: 18rpx;
    display: flex;
    align-items: center;
    padding: 5rpx 10rpx;
    border-radius: 20px;
    position: absolute;
    background: rgba( 0, 0, 0, 0.45 );
}

.gi3-swiper-image {
    width: 30rpx;
    height: 30rpx;
    padding: 5rpx;
    background: #fff;
    border-radius: 50%;
    /* box-shadow: 5px 5px 10px rgba( 0, 0, 0, 0.2 ); */
}

.gi3-swiper-image.child {
    margin-left: -10rpx;
}

.gi3-info {
    color: #fff;
    font-size: 20rpx;
    margin-left: 5rpx;
}

.gi3-tag-block {
    right: 10rpx;
    bottom: 12rpx;
    display: flex;
    align-items: center;
    position: absolute;
    border-radius: 3px;
    padding: 3rpx 5rpx;
    background: #ff8787; 
    background: -webkit-linear-gradient(to right, #ff61ab, #ff8787); 
    background: linear-gradient(to right, #ff61ab, #ff8787); 
}

.gi3-activity-icon {
    width: 20rpx;
    max-height: 30rpx;
    margin-right: 2rpx;
    display: inline-block;
}

.gi3-tag-text {
    color: #fff;
    font-size: 17rpx;
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );

}