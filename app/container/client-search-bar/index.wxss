.con-search-bar {

    display: flex;
    align-items: center;
    padding: 10rpx 15rpx;
    box-sizing: border-box;
}

.csb-search-block {
    flex: 1;
    display: flex;
    padding: 10rpx 20rpx 10rpx; 
    align-items: center;
    margin-right: 25rpx;
    border-radius: 30px;
    background: #f5f5f5;
    box-sizing: border-box;
}

.csb-search-btn {
    color: #999;
    font-size: 28rpx;
    line-height: 30rpx;
    letter-spacing: 0.05em;
}

.csb-input {
    flex: 1;
    color: #666;
    font-size: 22rpx;
    letter-spacing: 0.05em;
}

.csb-icon {
    margin-right: 15rpx;
}

.csb-close {
    width: 25rpx;
    height: 25rpx;
    display: flex;
    border-radius: 50%;
    margin-left: 15rpx;
    align-items: center;
    justify-content: center;
    background: rgba( 0, 0, 0, 0.1 );
}

.csb-close-btn {
    display: flex;
    height: 20rpx;
    align-items: center;
    justify-content: center;
}