.con-trip-order-deliver {
    min-height: 100vh;
    background: #fafafa;
}

.tod-bg {
    top: 75rpx;
    left: 0;
    height: 275rpx;
    position: fixed;
    width: 100vw;
    z-index: 0;
    background: #bc4e9c;  
    background: -webkit-linear-gradient(to bottom, #f80759, #bc4e9c);  
    background: linear-gradient(to bottom, #f80759, #bc4e9c); 
}

.tod-container {
    height: 100%;
    display: flex;
    z-index: 100;
    padding: 100rpx 30rpx 50rpx;
    flex-direction: column;
    padding-bottom: 100rpx;
}

.tod-img-upload {
    z-index: 100;
    background:#fffefc;
    border-radius:10px;
    box-shadow: 0px 3px 15px rgba(0, 0, 0, 0.08);
    
}

.tod-btn {
    left: 3%;
    width: 94%;
    color: #fff;
    bottom: 15rpx;
    font-size: 24rpx;
    position: fixed;
    text-align: center;
    background: #bc4e9c;
    border-radius: 5rpx;
    /* padding: 20rpx 0; */
    padding: 8rpx 0;
    background:-webkit-linear-gradient(to right, #f80759, #bc4e9c);
    background:linear-gradient(to right, #f80759, #bc4e9c);
}

