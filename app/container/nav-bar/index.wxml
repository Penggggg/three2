<!--container/nav-bar/index.wxml-->
<view class='con-nav-bar'>
  <view
    wx:for="{{ navList }}"
    wx:key="{{ index }}"
    class='con-nav-item'
    data-url="{{ item.url }}"
    data-index="{{ index }}"
    bindtap="navigate"
  >
    <image
      mode="aspectFill"
      class='con-nav-bar-img'
      src="{{ active === index ? item.active : item.normal }}"
      animation="{{ index === 0 ? animationData : noAnimation }}"
    />
    <view class="con-nav-text {{ active === index ? 'active' : '' }}">
      {{ item.label }}
    </view>
  </view>

</view>
