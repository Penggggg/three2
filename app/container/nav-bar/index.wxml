
<view class='con-nav-bar'>
    <form
        class="flex-1"
        wx:for="{{ navList }}"
        wx:key="{{ index }}"
        data-url="{{ item.url }}"
        bindsubmit="navigate"
        report-submit="{{ true }}"
    >
        <button
            form-type="submit"
            class="fix-btn con-nav-item"
        >
            <image
                mode="aspectFill"
                class='con-nav-bar-img'
                src="{{ active === index ? item.active : item.normal }}"
                animation="{{ index === 0 ? animationData : noAnimation }}"
            />
            <view class="con-nav-text {{ active === index ? 'active' : '' }}">
                {{ item.label }}
            </view>
        </button>
    </form>
</view>
