/* container/form/goods-detail/index.wxss */
.con-form-goods-detail {

}

.standards-block .btn-block {
  text-align: center;
  padding: 20rpx 0;
}

.standards-line {
  display: flex;
  position: relative;
  padding: 20rpx 30rpx 20rpx 30rpx;
}

.standards-line::after {
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  content: '';
  position: absolute;
  transform: scaleY( 0.5 );
  background: rgba( 0, 0, 0, 0.15 );
}

.standards-item {
  flex: 1;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  line-height: 36rpx;
  overflow: hidden;
}

.standards-img {
  height: 30rpx;
  width: 30rpx;
  border-radius: 6px;
}

