/* container/form/goods-detail/index.wxss */
.con-form-goods-detail {

}

.standards-block .btn-block {
  text-align: center;
  padding: 20rpx 0;
}

.standards-line {
  display: flex;
  position: relative;
  padding: 20rpx 30rpx 20rpx 30rpx;
}

.standards-line::after {
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  content: '';
  position: absolute;
  transform: scaleY( 0.5 );
  background: rgba( 0, 0, 0, 0.15 );
}

.standards-item {
  flex: 1;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  line-height: 36rpx;
  overflow: hidden;
}

.standards-img {
  height: 30rpx;
  width: 30rpx;
  border-radius: 6px;
}

.btn-blockk {
  margin-top: 50rpx;
  text-align: center;
  margin-bottom:50rpx;
}

.ptd-btn-block {
  width: 100vw;
  display: flex;
  margin-top: 35rpx;
  padding: 0 35rpx 30rpx;
  box-sizing: border-box;
  background: transparent;
}

.ptd-btn:first-child {
  /* margin-right: 30rpx; */
}

.ptd-btn {
  flex: 1;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  padding: 25rpx 0;
  border-radius: 30px;
  border: 1px solid #fff;
  /* text-shadow: 0px 0px 5px rgba( 255, 255, 255, 0.25); */
  box-shadow: 3px 3px 15px rgba( 0, 0, 0, 0.20 );
  background: #fff;
  color: #f80759;
}

.ptd-btn.invert {
  width: 100rpx;
  color: #fff;
  border: none;
  background: #bc4e9c;
  text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
  box-shadow: 3px 3px 15px rgba( 0, 0, 0, 0.25 );
  background:-webkit-linear-gradient(to right, #f80759, #bc4e9c);
  background:linear-gradient(to right, #f80759, #bc4e9c);
}
