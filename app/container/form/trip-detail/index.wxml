<view>

    <view class='con-form-trip-detail'>

        <view class="cftd-con">

            <!-- 表单：基本信息 -->
            <my-active-form
                id="form1"
                meta="{{ meta }}"
            />

            <!-- 商品推荐 -->
            <view class="recommend-block">

                <!-- 商品推荐列表 -->
                <scroll-view
                    scroll-x="{{ true }}"
                    wx:if="{{ selectedProducts.length > 0 }}"
                    class="recommend-list"
                >
                    <view
                        class="recommend-item"
                        wx:key="index"
                        data-sid="{{ item._id }}"
                        bindtap="toggleDeleteRecommend"
                        wx:for="{{ selectedProducts }}"
                    >
                        <image
                            mode="aspectFill"
                            lazy-load="{{ true }}"
                            class="recommend-item-img"
                            src="{{ item.img[ 0 ]}}"
                        />
                        <view class="recommend-item-title">{{ item.title }}</view>
                        <view
                            data-data="{{ item }}"
                            catchtap="deleteCommand"
                            class='ptd-img-icon ptd-icon'
                        >
                            <wxc-icon
                                size="18"
                                type="close"
                                color="#fff"
                            />
                        </view>
                    </view>
                </scroll-view>
                
                <!-- 商品推荐按钮 -->
                <view class='recommend-btn-block'>
                    <wxc-button
                        type="beauty"
                        plain="{{ true }}"
                        bind:tap="onToggleProduct"
                    >
                        选择商品
                    </wxc-button>
                </view>

            </view>

            <!-- 表单：营销信息 -->
            <my-active-form
                id="form2"
                meta="{{ meta2 }}"
            />

            <!-- 消费满减 -->
            <!-- <view
                class="caf-inputs caf-item"
                bindtap="toggleFullReduce"
            >
                <text class='caf-item-label'>消费满减</text>
                <view
                    class="caf-item-input {{ !fullreducePrice ? 'no-content' : '' }}"
                >
                    <view>
                        {{ fullreducePrice }}
                        {{ !fullreducePrice ? '如：满200元减10元' : '' }}
                    </view>
                </view>
            </view> -->
        
            <!-- 行程代金券 -->
            <!-- <view
                class="caf-inputs caf-item"
                bindtap="toggleCashCoupon"
            >
                <text class='caf-item-label'>代金券</text>
                <view
                    class="caf-item-input {{ !cashCouponPrice ? 'no-content' : '' }}"
                >
                    <view>
                        {{ cashCouponPrice }}
                        {{ !cashCouponPrice ? '行程结束后发放，用于下次消费' : '' }}
                    </view>
                </view>
            </view> -->

            <!-- 表单：资费信息 -->
            <!-- <my-active-form
                id="form3"
                meta="{{ meta3 }}"
            /> -->
        
        </view>

        <!-- 按钮 -->
        <view
            class="ptd-btn-block"
        >

            <form
                class="flex-1 btn-mr"
                bindsubmit="closeTrip"
                wx:if="{{ canBeEnd }}"
                report-submit="{{ true }}"
            >
                <button
                    bindsubmit="submit"
                    form-type="submit"
                    class='fix-btn ptd-btn'
                >
                    结束行程( 收尾款 )
                </button>
            </form>

            <form
                class="flex-1"
                wx:if="{{ !isClosed }}"
                report-submit="{{ true }}"
            >
                <button
                    bindtap="submit"
                    form-type="submit"
                    class='fix-btn ptd-btn invert'
                >
                    {{ !!tid ? '确定' : '创建' }}
                </button>
            </form>
        </view>

    </view>

    <!-- 商品选择 -->
    <my-product-selector
        show="{{ showProduct }}"
        bind:close="onToggleProduct"
        bind:confirm="onConfirmProduct"
    />

    <!-- 删除推荐 -->
    <i-modal
        title="提示"
        bind:ok="confirmDelete"
        visible="{{ showDelete }}"
        bind:cancel="toggleDeleteRecommend"
    >
        确定去掉该推荐商品吗?
    </i-modal>

    <!-- 消费满减 -->
    <i-modal
        title="消费满减"
        bind:ok="toggleFullReduce"
        visible="{{ showFullReduce }}"
        bind:cancel="closeReduce"
    >
        <wxc-input
            title="满足金额"
            type="number"
            data-type="1"
            nocenter="{{ true }}"
            placeholder=""
            value='{{ fullreduce_atleast }}'
            bindinput='onInputFullReduce'
            placeholder-style="color:rgba(114,113,113,0.50);"
        />
        <wxc-input
            title="减免金额"
            type="number"
            data-type="2"
            nocenter="{{ true }}"
            placeholder=""
            mode="none"
            value='{{ fullreduce_values }}'
            bindinput='onInputFullReduce'
            placeholder-style="color:rgba(114,113,113,0.50);"
        />
    </i-modal>
    
    <!-- 行程代金券 -->
    <i-modal
        title="行程代金券"
        bind:ok="toggleCashCoupon"
        visible="{{ showCashCoupon }}"
        bind:cancel="closeCashCoupon"
    >
        <wxc-input
            title="满足金额"
            type="number"
            data-type="1"
            nocenter="{{ true }}"
            placeholder=""
            value='{{ cashcoupon_atleast }}'
            bindinput='onInputCashCoupon'
            placeholder-style="color:rgba(114,113,113,0.50);"
        />
        <wxc-input
            title="减免金额"
            type="number"
            data-type="2"
            mode="none"
            nocenter="{{ true }}"
            placeholder=""
            value='{{ cashcoupon_values }}'
            bindinput='onInputCashCoupon'
            placeholder-style="color:rgba(114,113,113,0.50);"
        />
    </i-modal>

    <!-- 订单管理页面入口 -->
    <view
        wx:if="{{ !!tid }}"
        class="td-btn-entry"
        bindtap="goOrderManger"
    >
        订单
    </view>

</view>