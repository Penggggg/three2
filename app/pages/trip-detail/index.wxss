.p-trip-detail {
    min-height: 100vh;
    padding-bottom: 100rpx;
}

.ptd-pin-title-block {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 25rpx 35rpx 0 35rpx;
    box-sizing: border-box;
}

.ptd-pin-title {
    color:#333;
    font-size:30rpx;
    font-weight:bold;
    position:relative;
    letter-spacing:0.02em;
}

.ptd-pin-title:after {
    left: -10%;
    width: 110%;
    height: 15rpx;
    content: '';
    bottom: 5rpx;
    position: absolute;
    border-radius: 30rpx;
    background: rgba( 255,107,149, 0.20 );
}

.ptd-pin-tips {
    color: #eb2f96;
    font-size: 20rpx;
    font-weight: bold;
    letter-spacing: 0.02em;
}

.ptd-swiper {
    height: 170rpx;
    margin-top: 25rpx;
}

.ptd-swiper-item-container {

}

.ptd-swiper-item {
    display: flex;
    padding: 15rpx 10rpx;
    box-sizing: border-box;
    position: relative;
}

.ptd-waitpin-img-container {
    width: 130rpx;
    height: 130rpx;
    overflow: hidden;
    border-radius: 3px;
    margin-right: 15rpx;
    position: relative;
    border: 2px solid #fff;
    box-shadow: 0 0 15px rgba( 0, 0, 0, 0.15 );
}

.ptd-waitpin-img {
    width: 130rpx;
    height: 130rpx;
    border-radius: 3px;
}

.ptd-waitpin-avatar {
    /* bottom: 0rpx;
    right: 0rpx; */
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    /* position: absolute; */
    box-shadow: 3px 3px 25px rgba( 0, 0, 0, 0.15 );
}

.ptd-waitpin-info-block {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.ptd-waitpin-title {

    color: #4d4d4d;
    font-size: 22rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    margin-bottom: 5rpx;
    font-weight: 400;
    letter-spacing: 0.05em;
    
}

.ptd-waitpin-name {
    font-size: 22rpx;
    border-radius: 5px;
    background: #f5f5f5;
    padding: 2rpx 15rpx;
    display: inline-block;
    margin-right: 10rpx;
    color: #bfbfbf;
}

.ptd-lh {
    height:30rpx;
    line-height:30rpx;
}

.ptd-waitpin-title-block {
    height: 100rpx;
}

.ptd-waitpin-price-label {
    display: inline;
    font-size: 20rpx;
    color:#aa3f37;
}

.ptd-waitpin-price {
    color:#aa3f37;
    font-size:34rpx;
    position:relative;    
}

.ptd-waitpin-price-lh {
    height: 34rpx;
    line-height: 34rpx;
}

.ptd-waitpin-price-block {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.ptd-loading-tips {
    color: #999;
    font-size: 26rpx;
    text-align: center;
    padding-top: 200rpx;
}

.ptd-pin-list {
    margin-top: 20rpx;
    padding: 20rpx 25rpx;
}

.ptd-pin-item {
    border-radius: 10px;
    margin-bottom: 65rpx;
    box-shadow: 0px 0px 10px rgba( 0, 0, 0, 0.1 );
}

.ptd-pin-img-block {
    position: relative;
}

.ptd-pin-img-block.with-standar {
    height: 350rpx;
    overflow: hidden;
    display: flex;
    /* align-items: center; */
}

.ptd-pin-img-only-p {
    width: 100%;
    display: block;
    border-radius: 10px 10px 0 0 ;
}

.ptd-pin-img-standar {
    width: 60%;
    height: 100%;
    display: block;
    border-radius: 10px 0 0 0 ;
}

.ptd-pin-img-small {
    
    width: 100%;
    height: 100%;
    
}

.ptd-pin-img-small-con {
    top: 50%;
    right: 40rpx;
    width: 28%;
    height: 200rpx;
    overflow: hidden;
    position: absolute;
    transform: translate( 0, -50% );
    border-radius: 3px;
    border: 2px solid #fff;
    box-shadow: 3px 3px 25px rgba( 0, 0, 0, 0.1 );
}

.ptd-pin-title-only-p-block {
    left: 0;
    bottom: 0;
    width: 100%;
    position: absolute;
}

.ptd-pin-title-only-p {
    color: #fff;
    font-size: 30rpx;
    padding: 5rpx 25rpx;
    letter-spacing: 0.03em;
    box-sizing: border-box;
    overflow: hidden; 
    display: -webkit-box; 
    -webkit-line-clamp:1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    background: rgba( 0, 0, 0, 0.21 );
}

.ptd-pin-item-info-block {
    padding: 25rpx 25rpx 35rpx;
    box-sizing: border-box;
    border-radius: 0 0 10px 10px;
}

.ptd-pin-item-member-block {
    display: flex;
    align-items: center;
}

.ptd-pin-item-member-title {
    color: #4d4d4d;
    font-size: 24rpx;
    font-weight: bold;
    position: relative;
    letter-spacing: 0.02em;
    margin-right: 30rpx;
}

.ptd-pin-item-member-title.big {
    font-size: 32rpx
}

.ptd-pin-item-member-list {
    flex: 1;
    flex-wrap: wrap;
    position: relative;
}

.ptd-pop {
    left: 0rpx;
    top: -70rpx;
    height: 30rpx;
    color: #fff;
    display:flex;
    font-size: 20rpx;
    padding: 8rpx 15rpx;
    border-radius: 30px;
    position: absolute;
    align-items:center;
    background: rgba( 0, 0, 0, 0.4 );
}

.ptd-pop-delta {
    display: inline;
    font-size: 28rpx;
    margin-left: 8rpx;
}

.ptd-pop-trangle {
    left: 19rpx;
    bottom:-25rpx;    
    width: 0;
    height: 0;
    position: absolute;
    border-width: 13rpx;
    border-style: solid;
    border-color:  rgba( 0, 0, 0, 0.4 ) transparent transparent transparent;
    /* background: rgba( 0, 0, 0, 0.5 ); */
}

.ptd-pin-item-member-img {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-left: -8rpx;
    border: 2px solid #fff;
    box-shadow: -3px -1px 5px rgba( 0, 0, 0, 0.2 );    
}

.ptd-pin-item-info {
    /* color: #333; */
    font-size: 22rpx;
    line-height: 32rpx;
    letter-spacing: 0.02em;
    text-indent: 1.5em;
    color: rgba( 0, 0, 0, 0.5 );
}

.ptd-pin-good-title {
    color: #333;
    font-size: 30rpx;
    margin: 20rpx;
    letter-spacing: 0.03em;
    margin: 20rpx 0 30rpx;
    padding-left: 20rpx;
}

.ptd-pin-item-action-block {
    display: flex;
    margin-top: 35rpx;
    align-items: flex-end;
}

.ptd-pin-item-good-imgs {
    flex: 1;
    white-space: nowrap;
    overflow-y: scroll;
    margin-right: 15rpx;
}

.ptd-pin-item-good-img-item {
    width: 100rpx;
    height: 100rpx;
    border-radius: 3px;
    margin-right: 22rpx;
    /* border: 1px solid rgba( 0, 0, 0, 0.05 ); */
    box-shadow: 0 0 10px rgba( 0, 0, 0, 0.15 );
}

.ptd-pin-btn {
    display: flex;
    align-items: flex-end;
    padding: 7rpx 18rpx;
    border-radius: 3px;
    /* margin-top: 10rpx; */
    background: #bc4e9c;  
    background: -webkit-linear-gradient(to left, #f80759, #bc4e9c);  
    background: linear-gradient(to left, #f80759, #bc4e9c); 

}

.ptd-pin-btn-text {
    color: #fff;
    margin-right: 10rpx;
    font-size: 24rpx;
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}

.ptd-pin-btn-price {
    color: #fff;
    display: block;
    /* line-height: 50rpx; */
    /* height: 40rpx; */
    font-size: 30rpx;
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}

.ptd-nomore {
    margin-top: 100rpx;
    margin-bottom: 50rpx;
    color: #999;
    font-size: 22rpx;
    text-align: center;
    letter-spacing: 0.05em;
    position: relative;
}

.ptd-nomore:after {
    top: 50%;
    right: 10%;
    width: 30%;
    height: 1px;
    position: absolute;
    content: '';
    background: rgba( 0, 0, 0, 0.15 );
    transform: translate( 0, -50% ) scaleY( 0.5 );
}

.ptd-nomore:before {
    top: 50%;
    left: 10%;
    width: 30%;
    height: 1px;
    position: absolute;
    content: '';
    background: rgba( 0, 0, 0, 0.15 );
    transform: translate( 0, -50% ) scaleY( 0.5 );
}

.ptd-price-block {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.ptd-origin-price {
    color: #fff;
    display: block;
    font-size: 34rpx;
    margin-right: 20rpx;
    text-shadow: 1px 0px 4px rgba( 0, 0, 0, 0.6 );
}