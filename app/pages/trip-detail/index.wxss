.ptd-pin-title-block {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 25rpx 35rpx 0 35rpx;
    box-sizing: border-box;
}

.ptd-pin-title {
    color:#333;
    font-size:30rpx;
    font-weight:bold;
    position:relative;
    letter-spacing:0.02em;
}

.ptd-pin-title:after {
    left: -10%;
    width: 110%;
    height: 15rpx;
    content: '';
    bottom: 5rpx;
    position: absolute;
    border-radius: 30rpx;
    background: rgba( 255,107,149, 0.20 );
}

.ptd-pin-tips {
    color: #eb2f96;
    font-size: 20rpx;
    font-weight: bold;
    letter-spacing: 0.02em;
}

.ptd-pin-tips:after {
    left: -5%;
    bottom: -3rpx;
    width: 110%;
    height: 1px;
    transform: scaleY( 0.5 );
    position: absolute;
    content: '';
    background: #666;
}

.ptd-swiper {
    margin-top: 25rpx;
}

.ptd-swiper-item-container {

}

.ptd-swiper-item {
    display: flex;
    padding: 15rpx 10rpx;
    box-sizing: border-box;
    position: relative;
}

.ptd-waitpin-img-container {
    width: 130rpx;
    height: 130rpx;
    overflow: hidden;
    border-radius: 3px;
    margin-right: 15rpx;
    position: relative;
    border: 2px solid #fff;
    box-shadow: 0 0 15px rgba( 0, 0, 0, 0.15 );
}

.ptd-waitpin-img {
    width: 130rpx;
    min-height: 130rpx;
    border-radius: 3px;
}

.ptd-waitpin-avatar {
    /* bottom: 0rpx;
    right: 0rpx; */
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    /* position: absolute; */
    box-shadow: 3px 3px 25px rgba( 0, 0, 0, 0.15 );
}

.ptd-waitpin-info-block {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.ptd-waitpin-title {

    color: #4d4d4d;
    font-size: 22rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    margin-bottom: 5rpx;
    font-weight: 400;
    letter-spacing: 0.05em;
    
}

.ptd-waitpin-name {
    font-size: 22rpx;
    border-radius: 5px;
    background: #f5f5f5;
    padding: 2rpx 15rpx;
    display: inline-block;
    margin-right: 10rpx;
    color: #bfbfbf;
}

.ptd-lh {
    height:30rpx;
    line-height:30rpx;
}

.ptd-waitpin-title-block {
    height: 100rpx;
}

.ptd-waitpin-price-label {
    display: inline;
    font-size: 20rpx;
    color:#aa3f37;
}

.ptd-waitpin-price {
    color:#aa3f37;
    font-size:34rpx;
    position:relative;    
}

.ptd-waitpin-price-lh {
    height: 34rpx;
    line-height: 34rpx;
}

.ptd-waitpin-price-block {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.ptd-loading-tips {
    color: #999;
    font-size: 26rpx;
    text-align: center;
    padding-top: 200rpx;
}