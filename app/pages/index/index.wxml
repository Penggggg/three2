<view class='p-index'>

    <view class="pi-content-block">

        <!-- 搜索框 -->
        <view
            class="pi-search-block"
            bindtap="goSearch"
        >

            <view class="pi-icon">
                <wxc-icon
                    size="35"
                    type="search"
                    color="#bfbfbf"
                />
            </view>

            <view class="pi-search-text">
                搜索商品
            </view>
            
        </view>

        <!-- 加载中 -->
        <view
            wx:if="{{ loading }}"
            class="pi-loading-tips"
        >
            加载中...
        </view>

        <!-- 分类选择 -->
        <view
            class="pi-classify-contaienr"
            wx:if="{{ classify.length > 0 }}"
        >
            <view class="pi-classify-block">
                <view
                    wx:for="{{ classify }}"
                    wx:key="{{ index }}"
                    data-value="{{ item.value }}"
                    class="pi-classify-item {{ active === item.value ? 'active' : ''  }}"
                    bindtap="onChoiceClassify"
                >
                    {{ item.label }}
                </view>
            </view>
        </view>

        <!-- 内容层 -->
        <scroll-view
            scroll-y
            wx:if="{{ !loading }}"
            lower-threshold="100"
            class="pi-classify-content"
            bindscrolltolower="fetchRank"
        >
            <!-- 推荐分类页面 -->
            <view
                wx:if="{{ active === 'recommand' }}"
            >

                <!-- 新品上市 标题 -->
                <view
                    class="pi-new-block"
                    wx:if="{{ newList$.length > 0 }}"
                >
                    <view class="pi-new-title-img-block">
                        <view class="pi-new-title-img-icon"></view>
                        <view class="pi-new-title-img-con">
                            <image 
                                mode="aspectFit"
                                lazy-load="{{ true }}"
                                class="pi-new-title-img"
                                src="{{ newList$[ 0 ].img[ 0 ]}}"
                            />
                        </view>
                    </view>

                    <view class="pi-new-title-info-block">
                        <view class="pi-new-title">
                            New
                        </view>
                    </view>

                </view>

                <!-- 新品上市 列表 -->
                <view
                    class="pi-new-list-block-con"
                     wx:if="{{ newList$.length > 0 }}"
                >

                    <view class="pi-new-list-block-decorate"></view>

                    <view class="pi-new-decorate-text ab">
                        新品上市
                    </view>

                    <view
                        class="pi-new-list-block"
                    >
                        
                        <view class="pi-new-decorate-text ">
                            新品上市
                        </view>

                        <scroll-view
                            scroll-x
                            class="pi-new-list-con"
                            lower-threshold="100"
                            bindscrolltolower="fetchNew"
                        >
                            <view class="pi-new-list">
                                <view
                                    wx:for="{{ newList$ }}"
                                    wx:key="{{ index }}"
                                    class="pi-new-item"
                                    data-good="{{ item }}"
                                    bindtap="goGoodDetail"
                                >
                                    <view
                                        class="pi-new-item-img-con"
                                    >
                                        <image 
                                            mode="widthFix"
                                            lazy-load="{{ true }}"
                                            class="pi-new-item-img"
                                            src="{{ item.img[ 0 ]}}"
                                        />
                                        <view
                                            wx:if="{{ item.hasActivity }}"
                                            class="pi-new-item-tag-block"
                                        >
                                            <image
                                                mode="widthFix"
                                                class="pi-new-item-activity-icon"
                                                src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/icon-tag-white.png"
                                            />
                                            <view class="pi-new-item-tag-text">
                                                活动
                                            </view>
                                        </view>
                                    </view>
                                    <view class="pi-new-item-title">
                                        {{ item.title }}
                                    </view>
                                    <view class="pi-new-item-tag">
                                        {{ item.tagText }}
                                    </view>
                                </view>
                            </view>
                        </scroll-view>
                    </view>
                </view>

                <!-- 特价活动 -->
                <view
                    wx:if="{{ activities.length > 0 }}"
                    class="te-block"
                >
                    <view class="te-block-title">
                        特价·购
                    </view>
                </view>
                
                <!-- 特价活动 -->
                <view
                    class="pi-activities-block"
                >
                    <my-good-item-4
                        tid="{{ tid }}"
                        good="{{ item }}"
                        wx:key="{{ index }}"
                        wx:for="{{ activities$ }}"
                        direction="{{ item.right ? 'right' : '' }}"
                    />
                </view>

                <!-- 拼团 -->
                <view
                    class="te-block"
                    wx:if="{{ activities.length > 0 }}"
                >
                    <view class="te-block-title">
                        省钱·拼
                    </view>
                    <view
                        class="te-entry"
                        bindtap="goTripDetail"
                    >
                        View all
                    </view>
                </view>

                <!-- 热门拼团 -->
                <view
                    class="pi-pin-list"
                    wx:if="{{ pingList$.length > 0 }}"
                >
                    <view
                        class="pi-pin-item {{ index === pingList$.length - 1 ? 'nmb' : '' }}"
                        wx:key="{{ index }}"
                        wx:for="{{ pingList$ }}"
                    >
                        <!-- 主图：只有主体商品 -->
                        <view
                            wx:if="{{ !item.sid }}"
                            class="pi-pin-img-block only-p"
                        >
                            <image 
                                mode="widthFix"
                                lazy-load="{{ true }}"
                                class="pi-pin-img-only-p"
                                src="{{ item.detail.img }}"
                                data-img="{{ item.detail.img }}"
                                bindtap="priviewSingle"
                            />
                            <view class="pi-pin-title-only-p-block">
                                <view class="pi-pin-title-only-p">
                                    {{ item.detail.title }}
                                </view>
                            </view>
                        </view>

                        <!-- 主图：型号 -->
                        <view
                            wx:else
                            class="pi-pin-img-block with-standar"
                        >
                            <image 
                                mode="widthFix"
                                lazy-load="{{ true }}"
                                class="pi-pin-img-standar"
                                src="{{ item.detail.img }}"
                                data-img="{{ item.detail.img }}"
                                bindtap="priviewSingle"
                            />
                            <view class="pi-pin-img-small-con">
                                <image
                                    mode="widthFix"
                                    lazy-load="{{ true }}"
                                    class="pi-pin-img-small"
                                    src="{{ item.detail.good.img[ 0 ]}}"
                                    data-img="{{ item.detail.good.img[ 0 ] }}"
                                    bindtap="priviewSingle"
                                />
                            </view>
                        </view>

                        <!-- 商品详情 -->
                        <view class="pi-pin-item-info-block">

                            <!-- 显示参团人数 -->
                            <view class="pi-pin-item-member-block">
                                <view class="pi-pin-item-member-title">
                                    {{ item.users.length }}人已拼团
                                </view>
                                <view class="pi-pin-item-member-list">
                                    <image
                                        mode="scaleToFill"
                                        lazy-load="{{ true }}"
                                        wx:key="{{ k }}"
                                        wx:for-index="k"
                                        wx:for-item="user"
                                        wx:for="{{ item.users }}"
                                        src="{{ user.avatarUrl }}"
                                        class="pi-pin-item-member-img"
                                    />
                                </view>
                            </view>

                            <!-- 商品名称 -->
                            <view
                                wx:if="{{ item.sid }}"
                                class="pi-pin-good-title"
                            >
                                {{ item.detail.title }}
                            </view>

                            <!-- 商品介绍 -->
                            <view class="pi-pin-item-info">
                                {{ item.detail.good.detail }}
                            </view>

                            <!-- 商品图片、价格按钮 -->
                            <view class="pi-pin-item-action-block">
                                <view class="pi-pin-item-good-imgs">
                                    <image
                                        mode="scaleToFill"
                                        lazy-load="{{ true }}"
                                        src="{{ img }}"
                                        wx:for-index="k"
                                        wx:for-item="img"
                                        wx:key="{{ k }}"
                                        class="pi-pin-item-good-img-item"
                                        wx:for="{{ item.detail.good.img }}"
                                        data-img="{{ img }}"
                                        data-imgs="{{ item.detail.good.img }}"
                                        bindtap="priviewSingle"
                                    />
                                </view>
                                <view>
                                    <view
                                        class="pi-pin-btn"
                                        data-good="{{ item }}"
                                        bindtap="goGoodDetail"
                                    >
                                        <view class="pi-pin-btn-text">拼团价</view>
                                        <wxc-price
                                            icon="sub"
                                            decimal="small"
                                            class="pi-pin-btn-price"
                                        > 
                                            {{ item.adjustGroupPrice }}
                                        </wxc-price>
                                    </view>
                                </view>
                            </view>

                        </view>
                    </view>
                </view>

                <!-- 排行榜列表 -->
                <view
                    class="te-block"
                    wx:if="{{ rank$.length > 0 }}"
                >
                    <view class="te-block-title">
                        热销·宝贝
                    </view>
                </view>

                <!-- 排行榜列表 -->
                <view class="pi-result-waterfall">
                    <view
                        wx:key="{{ index }}"
                        wx:for="{{ rank$ }}"
                        class="pi-result-item"
                    >
                        <my-good-item-6
                            good="{{ item }}"
                            tid="{{ tid }}"
                        />
                    </view>
                </view>

            </view>

            <!-- 分类列表 -->
            <my-good-classify-list
                tid="{{ tid }}"
                classify="{{ active }}"
                wx:if="{{ active !== 'recommand' }}"
            />
        </scroll-view>

    </view>

    <!-- 导航按钮 -->
    <view class="pi-btn-block">
        <my-manager-entry-btn />
        <my-nav />
    </view>
</view>