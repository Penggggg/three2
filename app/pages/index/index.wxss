

.p-index {

    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #fff;
    box-sizing: border-box;
    padding: 0 15rpx 0;

}

.pi-content-block {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.pi-classify-content {
    flex: 1;
    overflow-y: scroll;
}

.pi-search-block {
    display: flex;
    padding: 10rpx 20rpx 10rpx; 
    align-items: center;
    border-radius: 30px;
    background: #f5f5f5;
    box-sizing: border-box;
}

.pi-icon {
    margin-right: 15rpx;
}

.pi-search-text {
    color: #bfbfbf;
    font-size: 22rpx;
    letter-spacing: 0.05em;
}

.pi-loading-tips {
    color: #999;
    font-size: 26rpx;
    text-align: center;
    padding-top: 200rpx;
}

.pi-classify-contaienr {
    margin: 0rpx 0 15rpx;
    overflow-x: scroll;
    position: relative;
    border-bottom: 3px solid #fafafa;
}

.pi-classify-block {
    padding: 20rpx 25rpx;
    white-space: nowrap;
}

.pi-classify-item {
    color: #4d4d4d;
    font-size: 24rpx;
    line-height: 32rpx;
    margin-right: 40rpx;
    display: inline-block;
    letter-spacing: 0.05em;
}

.pi-classify-item.active {
    color: #333;
    font-weight: bold;
}