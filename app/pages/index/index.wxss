

.p-index {

    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #fff;
    box-sizing: border-box;
    padding: 0 15rpx 0;

}

.pi-content-block {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.pi-classify-content {
    flex: 1;
    overflow-y: scroll;
}

.pi-search-block {
    display: flex;
    padding: 10rpx 20rpx 10rpx; 
    align-items: center;
    border-radius: 30px;
    background: #f5f5f5;
    box-sizing: border-box;
}

.pi-icon {
    margin-right: 15rpx;
}

.pi-search-text {
    color: #bfbfbf;
    font-size: 22rpx;
    letter-spacing: 0.05em;
}

.pi-loading-tips {
    color: #999;
    font-size: 26rpx;
    text-align: center;
    padding-top: 200rpx;
}

.pi-classify-contaienr {
    margin: 0rpx 0 15rpx;
    overflow-x: scroll;
    position: relative;
    border-bottom: 3px solid #fafafa;
}

.pi-classify-block {
    padding: 20rpx 25rpx;
    white-space: nowrap;
}

.pi-classify-item {
    color: #4d4d4d;
    font-size: 24rpx;
    line-height: 32rpx;
    margin-right: 40rpx;
    display: inline-block;
    letter-spacing: 0.05em;
}

.pi-classify-item.active {
    color: #333;
    font-weight: bold;
}

.pi-new-block {
    display: flex;
    align-items: center;
    padding: 20rpx 25rpx;
    box-sizing: border-box;
}

.pi-new-title-img-block {
    width: 100rpx;
    height: 100rpx;
    position: relative;
    margin-right: 40rpx;
}

.pi-new-title-img-icon {
    top: 50%;
    left: -20rpx;
    width: 50rpx;
    height: 50rpx;
    content: '';
    border-radius: 3px;
    position: absolute;
    background: #76e6dd;
    transform: translate( 0, -50% );
}

.pi-new-title-img-con {
    top: 0;
    left: 0;
    display:flex;
    width: 100rpx;
    height: 100rpx;
    overflow: hidden;
    border-radius: 5px;
    align-items:center;
    position: absolute;
    justify-content: center;
    border: 2px solid #fff;
    box-shadow: 2px 15px 15px rgba( 0, 0, 0, 0.06 );
}

.pi-new-title-img {
    width: 100%;
    height: 100rpx;
}

.pi-new-title {
    color: #333;
    font-size: 30rpx;
    font-weight: bold;
    letter-spacing: 0.02em;
}

.pi-new-list-block-con {
    height: 280rpx;
    position: relative;
}

.pi-new-list-block-decorate {
    bottom: 70rpx;
    left: 50rpx;
    height: 80rpx;
    width: 93%;
    position: absolute;
    background: rgb(245, 245, 250);

}

.pi-new-list-block {
    top: 0;
    left: 0;
    width: 100%;
    position: absolute;
    display: flex;
    position: relative;
    align-items: flex-end;
}


.pi-new-list-con {
    flex: 1;
    overflow-x: scroll;
    position: relative;
    box-sizing: border-box;
}

.pi-new-list {
    display: flex;
    flex-wrap: nowrap;
    padding: 20rpx 25rpx 20rpx 25rpx;
}

.pi-new-item {
    margin-right: 35rpx;
}

.pi-new-item-img-con {
    display:flex;
    align-items: center;
    width: 160rpx;
    height: 160rpx;
    overflow: hidden;
    border-radius: 3px;
    border: 2px solid #fff;
    position: relative;
    box-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.12 );
}

.pi-new-item-img {
    width: 100%;
    height: 160rpx;
}

.pi-new-decorate-text {
    opacity: 0;
    color: #333;
    font-size: 30rpx;
    font-weight: bold;
    margin-right: 40rpx;
    letter-spacing: 0.02em;
}

.pi-new-decorate-text.ab {
    left: 0;
    bottom: 85rpx;
    opacity: 1;
    position: absolute;
}

.pi-new-item-title {
    text-align: left;
    color: #4d4d4d;
    padding-left: 15rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    font-weight: bold;
    margin-top: 20rpx;
    letter-spacing: 0.02em;
    overflow: hidden; 
    display: -webkit-box; 
    -webkit-line-clamp: 1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
}

.pi-new-item-tag {
    padding-left: 15rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    letter-spacing: 0.02em;
    overflow: hidden; 
    display: -webkit-box; 
    -webkit-line-clamp: 1;
    color: rgba( 0,0,0,0.55 );
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
}

.pi-new-item-tag-block {
    top: 0rpx;
    left: 0rpx;
    display: flex;
    align-items: center;
    position: absolute;
    border-radius: 3px;
    padding: 3rpx 10rpx;
    background: #ff8787; 
    background: -webkit-linear-gradient(to right, #ff61ab, #ff8787); 
    background: linear-gradient(to right, #ff61ab, #ff8787); 
}

.pi-new-item-activity-icon {
    width: 20rpx;
    max-height: 30rpx;
    margin-right: 2rpx;
    display: inline-block;
}

.pi-new-item-tag-text {
    color: #fff;
    font-size: 19rpx;
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );

}

.te-block {
    display: flex;
    align-items: center;
    padding: 15rpx 35rpx 25rpx;
    box-sizing: border-box;
    margin-bottom: 15rpx;
    justify-content: space-between;
}

.te-block-title {
    color: #333;
    font-size: 30rpx;
    font-weight: bold;
    position: relative;
    letter-spacing: 0.02em;
}

.te-block-title:after {
    left: -10%;
    width: 110%;
    height: 15rpx;
    content: '';
    bottom: 5rpx;
    position: absolute;
    border-radius: 30rpx;
    background: rgba( 255,107,149, 0.20 );
}

.te-entry {
    color: #eb2f96;
    font-size: 20rpx;
    font-weight: bold;
    letter-spacing: 0.02em;
}

.pi-activities-block {
    /* padding: 0 25rpx; */
    box-sizing: border-box;
}

.pi-pin-list {
    padding: 0rpx 25rpx 20rpx 25rpx;
}

.pi-pin-item {
    border-radius: 10px;
    margin-bottom: 65rpx;
    box-shadow: 0px 0px 10px rgba( 0, 0, 0, 0.1 );
}

.pi-pin-item.nmb {
    margin-bottom: 0;
}

.pi-pin-img-block {
    position: relative;
}

.pi-pin-img-block.with-standar {
    height: 350rpx;
    overflow: hidden;
    display: flex;
    /* align-items: center; */
}

.pi-pin-img-only-p {
    width: 100%;
    display: block;
    border-radius: 10px 10px 0 0 ;
}

.pi-pin-img-standar {
    width: 60%;
    display: block;
    border-radius: 10px 0 0 0 ;
}

.pi-pin-img-small {
    
    width: 100%;
    
}

.pi-pin-img-small-con {
    top: 50%;
    right: 40rpx;
    width: 28%;
    height: 200rpx;
    overflow: hidden;
    position: absolute;
    transform: translate( 0, -50% );
    border-radius: 3px;
    border: 2px solid #fff;
    box-shadow: 3px 3px 25px rgba( 0, 0, 0, 0.1 );
}

.pi-pin-title-only-p-block {
    left: 0;
    bottom: 0;
    width: 100%;
    position: absolute;
}

.pi-pin-title-only-p {
    color: #fff;
    font-size: 30rpx;
    padding: 5rpx 25rpx;
    letter-spacing: 0.03em;
    box-sizing: border-box;
    overflow: hidden; 
    display: -webkit-box; 
    -webkit-line-clamp:1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    background: rgba( 0, 0, 0, 0.18 );
}

.pi-pin-item-info-block {
    padding: 25rpx 25rpx 35rpx;
    box-sizing: border-box;
    border-radius: 0 0 10px 10px;
}

.pi-pin-item-member-block {
    display: flex;
    align-items: center;
}

.pi-pin-item-member-title {
    color: #4d4d4d;
    font-size: 24rpx;
    font-weight: bold;
    position: relative;
    letter-spacing: 0.02em;
    margin-right: 30rpx;
}

.pi-pin-item-member-list {
    flex: 1;
    flex-wrap: wrap;
}

.pi-pin-item-member-img {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-left: -8rpx;
    border: 2px solid #fff;
    box-shadow: -3px -1px 5px rgba( 0, 0, 0, 0.2 );    
}

.pi-pin-item-info {
    color: #333;
    font-size: 22rpx;
    letter-spacing: 0.02em;
    line-height: 32rpx;
}

.pi-pin-good-title {
    color: #333;
    font-size: 30rpx;
    margin: 20rpx;
    letter-spacing: 0.03em;
    margin: 20rpx 0 30rpx;
    padding-left: 20rpx;
}

.pi-pin-item-action-block {
    display: flex;
    margin-top: 35rpx;
    align-items: flex-end;
}

.pi-pin-item-good-imgs {
    flex: 1;
    white-space: nowrap;
    overflow-y: scroll;
    margin-right: 15rpx;
}

.pi-pin-item-good-img-item {
    width: 100rpx;
    height: 100rpx;
    border-radius: 3px;
    margin-right: 22rpx;
}

.pi-pin-btn {
    display: flex;
    align-items: flex-end;
    padding: 7rpx 18rpx;
    border-radius: 3px;
    /* background: #ff8787; 
    background: -webkit-linear-gradient(to right, #ff61ab, #ff8787); 
    background: linear-gradient(to right, #ff61ab, #ff8787);  */
    background: #bc4e9c;  
    background: -webkit-linear-gradient(to left, #f80759, #bc4e9c);  
    background: linear-gradient(to left, #f80759, #bc4e9c); 

}

.pi-pin-btn-text {
    color: #fff;
    margin-right: 10rpx;
    font-size: 20rpx;
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}

.pi-pin-btn-price {
    color: #fff;
    display: block;
    line-height: 40rpx;
    height: 40rpx;
    font-size: 40rpx;
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}

.pi-result-waterfall {
    column-count: 2;
}

.pi-result-item {
    width: 46vw;
    box-sizing: border-box;
    break-inside: avoid;
    margin-bottom: 25rpx;
}