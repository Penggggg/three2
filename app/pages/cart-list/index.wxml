                            >
                                {{ item.tag[ 0 ]}}
                            </view>
                        </view>
                    </swiper-item>
                </block>
            </swiper> -->

        </scroll-view>   
        
        <!-- 底部结算栏 -->
        <view
            class="pcl-settlet-block"
            wx:if="{{ cartList.length !== 0 }}"
        >

            <!-- 全选 -->
            <view class="pcl-settlet-radio pcl-text">
                <switch
                    checked="{{ isSelectAll }}"
                    color='#ff5777'
                    type="checkbox"
                    bindchange="toggleSelectAll"
                />
                全选
            </view>

            <!-- 合计、结算 -->
            <view
                wx:if="{{ !isInDelete }}"
                class="pcl-settlet-msg"
            >
                <view
                    wx:if="{{ !needPrePay }}"
                    class="pcl-settlet-price pcl-text"
                >
                    合计:
                    <wxc-price
                        decimal="small"
                        class="pcl-price"
                    > 
                        {{ sum }}
                    </wxc-price>
                </view>

                <view
                    wx:else
                    class="pcl-settlet-price pcl-text"
                >
                    订金:
                    <wxc-price
                        decimal="small"
                        class="pcl-price"
                    > 
                    {{ sum2 }}
                    </wxc-price>
                    <view
                        class="pcl-settlet-deposit-price"
                    >
                        总计<wxc-price
                                decimal="small"
                                class="pcl-price small"
                            > 
                            {{ sum }}
                        </wxc-price>
                    </view>
                </view>

                <!-- 用户授权按钮 -->
                <button
                    wx:if="{{ !isUserAuth }}"
                    class="pcl-settlet-btn"
                    open-type="getUserInfo"
                    bindgetuserinfo="getUserAuth"
                >
                    结算
                </button>

                <!-- 结算按钮 拿到 form_id -->
                <form
                    wx:else
                    report-submit="{{ true }}"
                    bindsubmit="batchSettle"
                >
                    <button
                        form-type="submit"
                        class="pcl-settlet-btn"
                    >
                    {{ isSettling ? '结算中...' : '结算' }}
                    </button>
                </form>

            </view>

            <!-- 删除 -->
            <view
                wx:else 
                class="pcl-settlet-msg" 
            >
                <view
                    bindtap="confirmDelete"
                    class="pcl-settlet-btn blank"
                >
                    删除
                </view>
            </view>

        </view>

    </view>
    
    <view class="pcl-nav-block">
        <!-- 底部导航栏 -->
        <my-nav />
    </view>

     <!-- sku -->
    <my-sku-popup
        open="{{ openSku }}"
        skuItems="{{ skuItems }}"
        bind:close="onCloseSku"
        bind:confirm="onConfirmSku"
    />

</view>
