/* app/pages/cart-list/index.wxss */

.pcl-text {
    color: #666;
    font-size: 28rpx;
}

.p-cart-list {
    height: 100vh;
}

.pcl-info-block {
    height: 250rpx;
    padding: 25rpx;
    background: #ff5777;
    box-sizing: border-box;
}

.pcl-info {
    color: #fff;
    font-size: 32rpx;
}

.pcl-cart-like-block {
    height: 970rpx;
    background: #fff;
    box-sizing: border-box;
}

.pcl-cart-list-block {
    padding: 0 25rpx;
    margin-top: -130rpx;
}

.pcl-cart-list-item {
    width: 100%;
    background: #fff;
    padding: 25rpx 20rpx;
    border-radius: 10px;
    margin-bottom: 30rpx;
    position: relative;
    box-sizing: border-box;
    box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.1 );
}

.pcl-cart-item-top {
    display: flex;
    align-items: center;
}

.pcl-cart-item-radio {
    margin-right: 15rpx;
}

.pcl-cart-item-img {
    width: 180rpx;
    height: 180rpx;
    margin-right: 15rpx;
    border-radius: 5px;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
}

.pcl-cart-item-msg-block {
    height: 180rpx;
    display: flex;
    max-width: 400rpx;
    flex-direction: column;
}

.pcl-cart-item-title {
    color: #666;
    font-size: 28rpx;
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    margin-bottom: 10rpx;
    word-break: break-all;
}

.pcl-cart-item-info {
    color: #ff5777;
    font-size: 28rpx;
    margin-bottom: 10rpx;
}

.pcl-cart-item-info.grey {
    color: #999;
}

.pcl-settlet-block {
    left: 0;
    width: 100vw;
    bottom: 110rpx;
    padding: 25rpx;
    position: fixed;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    justify-content: space-between;
}

.pcl-settlet-block:before {
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    position: absolute;
    content: '';
    background: rgba( 0, 0, 0, 0.1 );
    transform: translateY( 0.5 );
}

.pcl-settlet-radio {

}

.pcl-settlet-msg {
    display: flex;
    align-items: center;
}

.pcl-price {
    color: #ff5777;
    font-size: 32rpx;
}

.pcl-settlet-price {
    margin-right: 15rpx;
}

.pcl-settlet-btn {
    color: #fff;
    font-size: 34rpx;
    text-align: center;
    border-radius: 20px;
    background: #ff5777;
    padding: 8rpx 35rpx;
}