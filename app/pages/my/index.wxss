.page-my {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #fff;
    box-sizing: border-box;
}

.pm-content-block {
    flex: 1;
    overflow-y: scroll;
}

.pm-header-block {
    height: 280rpx;
    padding: 30rpx 30rpx 0;
    margin-bottom: 30rpx;
    box-sizing: border-box;
    border-radius: 0 0 80px 80px;
    /* background: linear-gradient(to bottom, #ff5777, #ffe8ee ); */
}

.pm-userInfo-block {
    display: flex;
    padding: 0 70rpx;
    align-items: center;
    box-sizing: border-box;
}

.pm-userInfo-avatar {
    overflow:hidden;  
    display: block;  
    width: 120rpx;  
    height: 120rpx;  
    border-radius: 50%;  
    border: 2px solid #fff;  
    box-shadow: 3px 3px 15px rgba( 0, 0, 0, 0.05 );
}

.pm-userInfo-nick {
    color: #4d4d4d;
    font-size: 32rpx;
    margin-left: 30rpx;
    letter-spacing: 0.05em;
    /* text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 ); */
}

.pm-header-bar {
    display: flex;
    margin-top: 20rpx;
    border-radius: 8px;
    background: #fff;
    box-shadow: 0px 0px 15px rgba( 0, 0, 0, 0.05 );
}

.pm-header-bar-item {
    flex: 1;
    display: flex;
    height: 140rpx;
    position: relative;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.pm-header-bar-item.line:after {
    top: 20%;
    width: 1px;
    height: 60%;
    right: 0;
    content: '';
    position: absolute;
    transform: translateY( 0.5 );
    background: rgba( 0, 0, 0, 0.15 );
}

.pm-bar-item-content {
    color: #333;
    font-weight: bold;
    font-size: 32rpx;
    letter-spacing: 3rpx;
}

.pm-bar-item-title {
    color: #333;
    font-size: 25rpx;
}

.pm-bar-item-image {
    width: 35rpx;
    height: 30rpx;
}

.pm-trp-block {
    box-sizing: border-box;
    padding: 30rpx;
}

.pm-img-banner {
    height: 300rpx;
    width: 100%;
    border-radius: 8px;
    box-shadow: 3px 3px 15px rgba( 0, 0, 0, 0.05 );
}

.pm-other-block {
    margin-top: 15rpx;
    border-radius: 8px;
    box-sizing: border-box;
    padding:  0 30rpx;
}

.pm-other-container {
    border-radius: 8px;
    /* box-shadow: 3px 3px 13px rgba( 0, 0, 0, 0.1 ); */
}

.pm-other-item {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 35rpx 30rpx;
    position: relative;
    box-shadow: 3px 3px 15px rgba( 0, 0, 0, 0.05 );
}

.pm-other-item:first-child {
    border-radius: 8px 8px 8px 8px;
}

/* .pm-other-item:last-child {
    border-radius: 0 0 8px 8px;
} */

.pm-other-img {
    width: 45rpx;
    height: 45rpx;
}

.pm-other-title {
    color: #666;
    margin-left: 25rpx;
    font-size: 28rpx;
}

.pm-other-icon {
    top: 45%;
    right: 40rpx;
    position: absolute;
    transform: translateY( -50% );
}

.pm-checkin-block {
    padding: 30rpx;
    margin-top: 30rpx;
    box-sizing: border-box;
}

.pm-checkin-container {
    border-radius: 8px;
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
    padding: 50rpx 30rpx;
    background-image: linear-gradient( 225deg, #D4FFEC 0%, #57F2CC 48%, #4596FB 100%);
}

.pm-checkin-title {
    color: #fff;
    font-size: 26rpx;
    line-height: 36rpx;
    position: relative;
    display: inline-block;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.15 );
}

.pm-checkin-sum {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
    justify-content: space-between;
}

.pm-checkin-price {
    color: #fff;
    font-size: 70rpx;
    line-height: 83rpx;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.15 );
}

.pm-checkin-tips {
    font-size: 20rpx;
    background: #fff;
    padding: 10rpx 12rpx;
    border-radius: 30px;
    color: #fff;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.15 );
    box-shadow: 3px 3px 15px rgba( 0, 0, 0, 0.25 );
    background-image: linear-gradient( -225deg, #209cff 0%, #68e0cf 60%, #68e0cf 100%);
    /* background-image: linear-gradient( -225deg, #4facfe 0%, #00f2fe 100%); */
    /* background-image: linear-gradient(120deg, #48c6ef 0%, #48c6ef 100%); */
    /* background-image: linear-gradient( -225deg, #007adf 0%, #00ecbc 100%); */
    /* background-image: linear-gradient(-225deg, #77FFD2 0%, #6297DB 48%, #1EECFF 100%); */
    /* background-image: linear-gradient(to left, #9EFBD3 0%, #57E9F2 48%, #45D4FB 100%); */
}

.pm-checkin-tips-price {
    font-size: 24rpx;
    display: inline-block;
    margin-left: 6rpx;
}

.pm-checkin-bar {
    margin: 0 0 30rpx;
}

.pm-checkin-user {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
}

.pm-checkin-class {
    color: #fff;
    font-size: 25rpx;
    line-height: 40rpx;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.15 );
}

.pm-checkin-class.start {
    display: flex;
    align-items: flex-end;
}

.pm-checkin-class.big {
    font-size: 26rpx;
    /* font-weight: bold; */
}

.pm-checkin-class.small {
    font-weight: bold;
}

.pm-checkin-class-tips {
    font-size: 32rpx;
    margin-left: 3rpx;
    font-weight: bold;
    display: inline-block;
}

.pm-checkin-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 8rpx;
    display: inline-block;
}

.pm-checkin-interal-tips {
    opacity: 100;
    top: -10rpx;
    right: -140rpx;
    color: #fff;
    font-size: 22rpx;
    padding: 5rpx 10rpx;
    position: absolute;
    border-radius: 30px;
    text-align: center;
    background: rgba( 0, 0, 0, 0.25 );
    pointer-events: none;
    transition: all ease 0.4s;
}

.pm-checkin-interal-tips:after {
    bottom: -11rpx;
    left: 25rpx;
    content: '';
    width: 0;
    height: 0;
    position: absolute;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 12rpx solid rgba( 0, 0, 0, 0.25 );
}

.pm-checkin-interal-tips.hide {
    opacity: 0;
}