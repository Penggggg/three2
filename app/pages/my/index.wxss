.page-my {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #fafafa;
    box-sizing: border-box;
}

.pm-content-block {
    flex: 1;
    overflow-y: scroll;
}

.pm-header-block {
    height: 280rpx;
    padding: 30rpx 30rpx 0;
    margin-bottom: 30rpx;
    box-sizing: border-box;
    border-radius: 0 0 80px 80px;
    background: linear-gradient(to bottom, #ff5777, #ffe8ee );
}

.pm-userInfo-block {
    display: flex;
    padding: 0 70rpx;
    align-items: center;
    box-sizing: border-box;
}

.pm-userInfo-avatar {
    overflow:hidden;  
    display: block;  
    width: 120rpx;  
    height: 120rpx;  
    border-radius: 50%;  
    border: 2px solid #fff;  
    box-shadow: 3px 3px 13px rgba(0, 0, 0, 0.2);
}

.pm-userInfo-nick {
    color: #fff;
    font-size: 28rpx;
    margin-left: 30rpx;
    text-shadow: 0px 0px 5px rgba( 0, 0, 0, 0.25 );
}

.pm-header-bar {
    display: flex;
    margin-top: 20rpx;
    border-radius: 8px;
    background: #fff;
    box-shadow: 3px 3px 13px rgba(0, 0, 0, 0.15);
}

.pm-header-bar-item {
    flex: 1;
    display: flex;
    height: 140rpx;
    position: relative;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.pm-header-bar-item.line:after {
    top: 20%;
    width: 1px;
    height: 60%;
    right: 0;
    content: '';
    position: absolute;
    transform: translateY( 0.5 );
    background: rgba( 0, 0, 0, 0.15 );
}

.pm-bar-item-content {
    color: #333;
    font-weight: bold;
    font-size: 32rpx;
    letter-spacing: 3rpx;
}

.pm-bar-item-title {
    color: #333;
    font-size: 25rpx;
}

.pm-bar-item-image {
    width: 35rpx;
    height: 30rpx;
}

.pm-trp-block {
    box-sizing: border-box;
    padding: 30rpx;
}

.pm-img-banner {
    height: 300rpx;
    width: 100%;
    border-radius: 8px;
    box-shadow: 3px 3px 13px rgba( 0, 0, 0, 0.1 );
}

.pm-other-block {
    margin-top: 15rpx;
    border-radius: 8px;
    box-sizing: border-box;
    padding:  0 30rpx;
}

.pm-other-container {
    border-radius: 8px;
    /* boxx-shadow: 3px 3px 13px rgba( 0, 0, 0, 0.1 ); */
}

.pm-other-item {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 35rpx 30rpx;
    position: relative;
}

.pm-other-item:first-child {
    border-radius: 8px 8px 8px 8px;
}

/* .pm-other-item:last-child {
    border-radius: 0 0 8px 8px;
} */

.pm-other-img {
    width: 45rpx;
    height: 45rpx;
}

.pm-other-title {
    color: #666;
    margin-left: 25rpx;
    font-size: 28rpx;
}

.pm-other-icon {
    top: 45%;
    right: 40rpx;
    position: absolute;
    transform: translateY( -50% );
}
