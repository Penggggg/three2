<view class="page-my">

    <view class="pm-content-block">
        <!-- 顶部 -->
        <view class="pm-header-block">

            <!-- 头像、昵称 -->
            <view class="pm-userInfo-block">
                <view class="pm-userInfo-avatar">
                    <open-data type="userAvatarUrl"></open-data>
                </view>
                <view class="pm-userInfo-nick">
                    <open-data type="userNickName"></open-data>
                </view>
            </view>

            <!-- 头部bar -->
            <view class="pm-header-bar">
                <view
                    class="pm-header-bar-item"
                    bindtap="goOrderList"
                >
                    <view class="pm-bar-item-content">{{ baseInfo.orders }}</view>
                    <view class="pm-bar-item-title">订单</view>
                </view>
                <view
                    class="pm-header-bar-item line"
                    bindtap="goCouponList"
                >
                    <view class="pm-bar-item-content">{{ baseInfo.coupons }}</view>
                    <view class="pm-bar-item-title">卡券</view>
                </view>
                <view
                    class="pm-header-bar-item"
                    bindtap="goLike"
                >
                    <view class="pm-bar-item-content">
                        <image
                            class="pm-bar-item-image"
                            src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/header.png"
                        />
                    </view>
                    <view class="pm-bar-item-title">我的收藏</view>
                </view>
            </view>

        </view>


        <!-- 抵现积分、签到打卡 -->
        <view
            class="pm-checkin-block"
        >
            <view class="pm-checkin-container">

                <!-- 标题 -->
                <view class="pm-checkin-title">
                    我的抵现金
                    <view
                        class="pm-checkin-interal-tips {{ showInteral ? '' : 'hide' }}"
                    >
                        {{ tipsText }}
                    </view>
                </view>

                <!-- 金额 -->
                <view class="pm-checkin-sum">
                    <wxc-price
                        icon="sub"
                        decimal="small"
                        class="pm-checkin-price"
                    > 
                        5.32
                    </wxc-price>
                    <!-- <view class="pm-checkin-tips">
                        明天送<view class="pm-checkin-tips-price">¥3.23</view>
                    </view> -->
                </view>

                <!-- 进度条 -->
                <view 
                    class="pm-checkin-bar"
                >
                    <my-process-bar
                        valText="经验 "
                        showRate="{{ false }}"
                        current="{{ 80 }}"
                        total="{{ 100 }}"
                    />
                </view>

                <!-- 用户等级 -->
                <view
                    class="pm-checkin-user"
                >
                    <view class="pm-checkin-class">
                        等级: <view class="pm-checkin-class-tips">1级</view> 
                        <view>全周可送 ¥9.9元</view>
                    </view>
                    <view class="pm-checkin-class start big">
                        <image
                            mode="aspectFill"
                            class='pm-checkin-icon'
                            src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/icon-coin-1.png"
                        /> 2级每周送 ¥12.8元
                    </view>
                </view>

                <!-- 任务列表 -->
                <!-- 倒计时 -->
                <view 
                    class="pm-checkin-task"
                >
                    <view class="pm-checkin-task-content">
                        <image
                            mode="aspectFill"
                            class='pm-checkin-task-icon'
                            src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/icon-exp-1.png"
                        />
                        <view class="pm-checkin-task-text">
                            3小时后登陆奖励
                        </view>
                        <view class="pm-checkin-task-get">
                            20经验
                        </view>
                    </view>

                    <view class="pm-checkin-task-count">
                        <wxc-countdown
                            countdown="{{ 1000 }}"
                            format="hh:mm:ss"
                            num-style="font-size: 24rpx; color: #fff;"
                            symbol-style="font-size: 24rpx;color: #fff;"
                        />
                    </view>
                </view>

            </view>
        </view>

        <!-- 其他选项 -->
        <!-- <view class="pm-other-block">
