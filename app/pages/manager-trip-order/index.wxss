.con-trip-order {
    display: flex;
    height: 100vh;
    flex-direction: column;
    background: #fafafa;
    box-sizing: border-box;
    padding-top: 70rpx;
}

.to-tabs {
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    position: absolute;
    background: #f80759;
    align-items: center;
}

.to-tabs-item {
    flex: 1;
    color: rgba( 255, 255, 255, 0.5 );
    font-size: 24rpx;
    text-align: center;
    position: relative;
    padding: 20rpx 0 30rpx;
}

.to-tabs-item.active {
    color: #fff;
}

.to-tabs-item.line:before {
    left: 0%;
    width: 100rpx;
    height: 1px;
    bottom: 50%;
    content: '';
    border-radius: 5px;
    position: absolute;
    transform: translate( -50%, -100% );
    background: rgba( 255, 255, 255, 0.5 );
}

.to-tab-icon {
    display: flex;
    width: 25rpx;
    height: 25rpx;
    align-items: center;
    justify-content: center;
    font-size: 20rpx;
    line-height: 25rpx;
    border-radius: 50%;
    margin-right: 10rpx;
    display: inline-block;
    color: rgba( 255, 255, 255, 0.5 );
    border: 1px solid rgba( 255, 255, 255, 0.5 );
}

.to-tab-icon.active {
    color: #fff;
    border: 1px solid #fff;
}

