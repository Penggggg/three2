.p-manager-goods-list {
  display: flex;
  height: 100vh;
  flex-direction: column;
}

.pmgl-search-block {
  margin-bottom: 20rpx;
  border-bottom: 3px solid #fafafa;
}

.pmgl-list-container {
  flex: 1;
  overflow-y: scroll;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.pmgl-entry-btn-container {
  right: 50rpx;
  bottom: 200rpx;
  position: fixed;
  border-radius: 50%;
  z-index: 1000;
  box-shadow: 3px 3px 10px rgba(0,0,0,0.20);
}

.pga-trash {
  display: inline;
  margin-right: 12rpx;
}

.pmgl-entry-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  width: 100rpx;
  border-radius: 100rpx;
  height:100rpx;
  overflow: hidden;
  line-height:100rpx;
  background: #ff8787; 
  background: -webkit-linear-gradient(to bottom, #ff61ab, #ff8787); 
  background: linear-gradient(to bottom, #ff61ab, #ff8787); 
}

.pmgl-list-item-con {
  display: flex;
  padding: 15rpx 5rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  position: relative;
}

.pmgl-list-item-con:after {
  left: 0;
  bottom: -20rpx;
  width: 100%;
  height: 1px;
  content: '';
  position: absolute;
  transform: scaleY( 0.5 );
  background: #000;
  background: rgba( 0,0,0,0.2 ); 
  background:  linear-gradient(to left, rgba( 0,0,0,0.05 ), rgba( 0,0,0,0.1 ), rgba( 0,0,0,0.05 )); 
}

.pmgl-item-img-con {
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  margin-right: 25rpx;
  border-radius: 3px;
  border: 2px solid #fff;
  box-shadow: 3px 3px 15px rgba( 0, 0, 0, 0.12 );
}

.pmgl-item-img {
  width: 180rpx;
  height: 180rpx;
}

.pmgl-item-info-block {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pmgl-item-title {
  color:#333;
  letter-spacing: 0.02em;
  font-size: 30rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  word-break :break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
  
}

.pmgl-item-action {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pmgl-price {
  color: #d92a22;
  font-size: 40rpx;
}

.pmgl-small-label {
  margin-left: 6rpx;
  display: inline;
  font-size: 22rpx;
  color: #bfbfbf;   
}

.pmgl-item-stock {
  color: #bfbfbf;
  font-size: 24rpx;
  letter-spacing: 0.02em;
  box-sizing: border-box;
}

.pmgl-item-stock.active {
  color: #d92a22;
}


.pmgl-nomore {
  margin-top: 100rpx;
  margin-bottom: 50rpx;
  color: #999;
  font-size: 22rpx;
  text-align: center;
  letter-spacing: 0.05em;
  position: relative;
}

.pmgl-nomore:after {
  top: 50%;
  right: 10%;
  width: 30%;
  height: 1px;
  position: absolute;
  content: '';
  background: rgba( 0, 0, 0, 0.15 );
  transform: translate( 0, -50% ) scaleY( 0.5 );
}

.pmgl-nomore:before {
  top: 50%;
  left: 10%;
  width: 30%;
  height: 1px;
  position: absolute;
  content: '';
  background: rgba( 0, 0, 0, 0.15 );
  transform: translate( 0, -50% ) scaleY( 0.5 );
}
