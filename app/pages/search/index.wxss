.p-search {
    display: flex;
    height: 100vh;
    flex-direction: column;
    box-sizing: border-box;
}

.ps-search-block {
    margin-bottom: 20rpx;
    border-bottom: 3px solid #fafafa;
}

.ps-title-block {
    display: flex;
    align-items: center;
    padding: 15rpx 35rpx 25rpx;
    box-sizing: border-box;
    justify-content: space-between;
}

.ps-block-title {
    color: #333;
    font-size: 30rpx;
    font-weight: bold;
    position: relative;
    letter-spacing: 0.02em;
}

.ps-history-list {
    display: flex;
    flex-wrap: wrap;
    padding: 0 25rpx;
    box-sizing: border-box;
}

.ps-history-item {
    font-size: 24rpx;
    color: #666;
    background: #f5f5f5;
    padding: 10rpx 25rpx;
    display: inline-block;
    margin-right: 20rpx;
    border-radius: 6px;
    margin-bottom: 25rpx;
}

.ps-result-container {
    flex: 1;
    overflow: hidden;
    overflow-y: scroll;
    box-sizing: border-box;
    padding: 20rpx 15rpx;
}

.ps-result-waterfall {
    column-count: 2;
}

.ps-result-item {
    width: 46vw;
    box-sizing: border-box;
    margin: 0 0.125em 1em;
    break-inside: avoid;
}