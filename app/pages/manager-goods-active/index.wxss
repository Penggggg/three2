.p-good-active {
    
    display: flex;
    min-height: 100vh;
    background: #fff;
    flex-direction: column;

}

.pga-btn-container {
    right: 50rpx;
    bottom: 200rpx;
    position: fixed;
    border-radius: 50%;
    z-index: 1000;
    box-shadow: 3px 3px 10px rgba(0,0,0,0.20);
}

.pga-tab-block {
    display: flex;
    background: #fff;
    align-items: center;
    padding: 0 40rpx 0rpx;
    margin-bottom: 15rpx;
    position: relative;
    box-sizing: border-box;
    justify-content: space-around;
}

.pga-tab-block:after {
    height: 15rpx;
    width: 100%;
    left: 0;
    content: '';
    bottom: -20rpx;
    position: absolute;
    background: #fafafa;
}

.pga-tab {
    color: #333;
    font-weight: 500;
    font-size: 30rpx;
    text-align: center;
    position: relative;
    padding-bottom: 20rpx;
    letter-spacing: 0.02em;
}

.pga-tab.active {
    color: #d92a22;
}

.pga-tab.active::after {
    height: 3px;
    width: 100%;
    left: 0;
    content: '';
    bottom: 0rpx;
    background: #d92a22;
    position: absolute;
    border-radius: 30px;
}

.pga-list-container {
    flex: 1;
    overflow: hidden;
    padding: 0rpx 20rpx 0rpx;
    box-sizing: border-box;
    overflow-y: scroll;
}

.pga-list-item {
    display: flex;
    background: #fff;
    position: relative;
    padding: 15rpx 20rpx;
    box-sizing: border-box;
}

.pga-list-item::after {
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    content: '';
    position: absolute;
    background: rgba(0,0,0,0.10);
}

.pga-item-img {
    width: 180rpx;
    height: 180rpx;
    border-radius: 3px;
    margin-right: 10rpx;
    /* border: 1px solid rgba( 0,0,0,0.5 ); */
}

.pga-item-info-block {
    flex: 1;
    /* display: flex;
    flex-direction: column; */
}

.pga-item-title {
    color: #333;
    letter-spacing: 0.02em;
    font-size: 28rpx;
    overflow :hidden; 
    display: -webkit-box; 
    -webkit-line-clamp: 2;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    margin-bottom: 5rpx;
}

.pga-item-title.pl {
    padding-left: 20rpx;
}

.pga-item-standar {
    font-size: 24rpx;
    border-radius: 3px;
    background: #f5f5f5;
    padding: 2rpx 10rpx;
    display: inline;
    margin-top: 6rpx;
    /* color: #bfbfbf;     */
    color: rgba( 0, 0, 0, 0.3 );
}

.pga-item-time {
    color: #d92a22;
    font-size: 24rpx;
    letter-spacing: 0.02em;
    padding-left: 20rpx;
    box-sizing: border-box;
}

.pga-item-time.grey {
    color: #bfbfbf;
}

.pga-red-price {
    color: #d92a22;
    font-size: 40rpx;
}

.pga-small-label {
    margin-left: 6rpx;
    display: inline;
    font-size: 20rpx;
    color: #bfbfbf;   
}

.pga-small-price {
    display: inline;
    font-size: 30rpx;
    color: #bfbfbf;
}

.pga-item-action {
    margin-top: 30rpx;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
    box-sizing: border-box;
    justify-content: space-between;
}

.pga-empty-tips-block {
    top: 40%;
    left: 50%;
    position: fixed;
    transform: translate( -50%, -50% );
}

.pga-empty-tips {
    color: #333;
    font-size: 22rpx;
    margin-bottom: 10rpx;
}

.pga-create-text {
    color: #d92a22;
    font-size: 30rpx;
    text-align: center;
    text-decoration: underline;
}

.pga-actions {
    display: flex;
    align-items: center;
}

.pga-trash {
    display: inline;
    margin-right: 12rpx;
}

.pga-my-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    min-width: 100rpx;
    border-radius: 100rpx;
    min-height:100rpx;
    line-height:100rpx;
    background: #ff8787; 
    background: -webkit-linear-gradient(to bottom, #ff61ab, #ff8787); 
    background: linear-gradient(to bottom, #ff61ab, #ff8787); 
    
  }
  
