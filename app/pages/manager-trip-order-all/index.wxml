<view class="page-trip-order-all">
    <!-- 加载中 -->
    <view
        wx:if="{{ loading && list$.length === 0 }}"
        class="toa-loading-tips"
    >
        加载中...
    </view>

    <view
        class=""
        wx:else
    >
        <!-- 背景 -->
        <view class="toa-bg"></view>

        <!-- 列表 -->
        <scroll-view
            scroll-y
            lower-threshold="100"
            class="toa-list"
            bindscrolltolower="fetchList"
            wx:if="{{ list$.length > 0 }}"
        >
            
        </scroll-view>
    </view>
</view>