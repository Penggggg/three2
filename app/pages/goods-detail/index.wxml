<!--app/pages/goods-detail/index.wxml-->
<view class="page-goods-detail"> 

    <!-- 加载栏 -->
    <view
        class="pgd-tips-skt"
        wx:if="{{ loading }}"
    >
        <view class="text">正在加载...</view> 
    </view>

    <!-- 内容 -->
    <view
        wx:else
    >
        
        <!-- 轮播图 -->
        <swiper
            autoplay="{{ true }}"
            interval="{{ 5000 }}"
            circular="{{ true }}"
            class="pgd-swiper"
        >
            <block
                wx:if="{{ detail }}"
                wx:key="{{ index }}"
                wx:for="{{ detail.img }}"
            >
                <swiper-item>
                    <image
                        mode="widthFix"
                        src="{{ item }}"
                        data-img="{{ item }}"
                        class="pgd-swiper-img"
                        bindtap='previewImg'
                    />
                </swiper-item>
            </block>
        </swiper>

        <!-- v2 价格信息 + 倒计时 -->
        <view
            class="pgd-price-time-block"
        >
            <!-- 固定文案 -->
            <view class="pgd-price-time-block-item msg">
                <view class="pgd-price-time-block-text">
                    超值优惠
                </view>
                <view class="pgd-price-time-block-text indent">
                    限时购
                </view>
            </view>

            <!-- 价格信息 -->
            <view class="pgd-price-time-block-item purple">
                <wxc-price
                    icon="sub"
                    class="white price mr"
                    decimal="small"
                    wx:if="{{ detail }}"
                > 
                    {{ price }}
                </wxc-price>
                <wxc-price
                    status="del"
                    decimal="small"
                    wx:if="{{ detail }}"
                    del-color="#fff"
                    class="white fade-price"
                > 
                    原价{{ detail.fadePrice }}
                </wxc-price>
            </view>

            <!-- 倒计时 -->
            <view class="pgd-price-time-block-item countdown">
                <view class="pgd-price-time-block-tips">行程开始还剩</view>
                <wxc-countdown
                    countdown="{{ 1000 }}"
                    format="hh:mm:ss"
                    num-style="font-size: 32rpx; color: #fff; padding: 5rpx 8rpx;background: #000; text-align: center; border-radius: 8rpx;"
                />
            </view>

        </view>

        <!-- v1 - 标题 -->
        <view
            class="pgd-title"
            wx:if="{{ detail }}"
        >
            {{ detail.title }}
        </view>

        <!-- v1 - 标签、收藏-->
        <view
            wx:if="{{ detail }}"
            class="pgd-tag-block padding"
            bindtap="onLike"
        >
            <wxc-label
                class="pgd-label"
                text="{{ item }}"
                wx:key="{{ index }}"
                wx:for="{{ detail.tag }}"
            />

            <wxc-label
                class="pgd-label"
                wx:if="{{ detail.groupPrice }}"
                text="团购价{{ detail.groupPrice }}"
            />

            <view class="pgd-like">
                <i-icon
                    size="20"
                    type="{{ liked ? 'like_fill' : 'like' }}"
                    color="#ff5777"
                />收藏
            </view>
        </view>

        <!-- 分割线 -->
        <view class="drive-line mt"></view>

        <!-- 团购信息、基本保证 -->
        <view
            class="info-block"
        >

            <view class="info-block-item" wx:if="{{ priceGap }}">

                <view class="info-block-item-label">
                    拼团：
                </view>

                <view class="info-block-item-content">
                    行程中有Ta人购买，<text class="red" bindtap="toggleTips">自动减{{ priceGap }}元【详情】</text>
                </view>

                <view class="invite-icon">
                    <image
                        class="invite-icon-img"
                        src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/wechat.png"
                        animation="{{ animationMiddleHeaderItem }}"
                    />
                </view>

            </view>

            <view class="info-block-item">

                <view class="info-block-item-label">
                    保证：
                </view>

                <view class="info-block-item-content">
                    <view
                        wx:for="{{ promiseTips }}"
                        wx:key="{{ index }}"
                        class="info-block-item-tips"
                    >
                        <image
                            class="info-block-item-tips-image"
                            src="cloud://dev-0822cd.6465-dev-0822cd/icon-img/right-icon.png"
                        />
                        {{ item }}
                    </view>
                </view>
                
            </view>

        </view>

        <!-- 分割线 -->
        <view class="drive-line"></view>

        <!-- banner -->
        <view class="detail-info-banner">
            <image
                mode="widthFix"
                class="detail-info-banner-img"
                src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/good-info-banner.png"
            />
        </view>

        <!-- 文字介绍 -->
        <view class="text-info-block" wx:if="{{ detail }}">
            <view
                wx:key="{{ index }}"
                class="text-info-item"
                wx:for="{{ detailIntro }}"
            >
                {{ item }}
            </view>
        </view>

        <!-- 商品下面的栏 -->
        <my-goods-detail-bar
            pid="{{ id }}"
            detail="{{ detail }}"
        />

    </view> 

    <!-- 商品管理页面入口 -->
    <view
        wx:if="{{ showBtn }}"
        class="gd-btn-entry"
        bindtap="goManager"
    >
        修改
    </view>

    <!-- 团购提示弹框 -->
    <wxc-mask
        content-align="cc"
        status="{{ showTips }}"
        bindmasktap="toggleTips"
    >
        <view class="gd-pin-tips-block">

            <view class="gd-pin-tips-icon-block">
                <view class="gd-pin-tips-icon-round">
                    <image
                        mode="widthFix"
                        class="gd-pin-tips-icon"
                        src="https://global-1257764567.cos.ap-guangzhou.myqcloud.com/icon-money-white.png"
                    />
                </view>
            </view>

            <view class="gd-pin-tips-title">
                如何省钱
            </view>

            <view class="gd-pin-tips-content">
                购买后，如有他人也买了同款商品，会"自动拼团”，并得到“拼团价”。如果闺蜜或者群友刚好也需要～那就邀请她们一起购买吧！
            </view>

            <!-- 行程清单 -->
            <swiper
                autoplay="{{ true }}"
                circular="{{ true }}"
                duration="{{ 1000 }}"
                interval="{{ 3000 }}"
                class="gd-swiper {{ pin.length <= 2 ? pin.length === 1 ? 'one' : pin.length === 2 ? 'two' : '' : 'two' }}"
                display-multiple-items="{{ pin.length <= 2 ? pin.length : 2 }}"
            >
                <block
                    wx:key="{{ index }}"
                    wx:for="{{ pin$ }}"
                >
                    <swiper-item class="swiper-visible">
                        <view
                            data-data="{{ item }}"
                            class="gd-swiper-item"
                            bindtap="previewPin"
                        >
                            <image
                                src="{{ item.img }}"
                                mode="scaleToFill"
                                class="gd-swiper-image"
                            />
                            <view class="gd-swiper-title">
                                {{ item.name }}
                            </view>
                            <view class="gd-swiper-title small">
                                原价：¥{{ item.price }}
                            </view>
                            <view class="gd-swiper-title small color">
                                拼团：¥{{ item.groupPrice }}
                            </view>
                            <view
                                class="gd-swiper-tag"
                                wx:if="{{ item.canPin }}"
                            >
                                本次可拼团
                            </view>
                        </view>
                    </swiper-item>
                </block>
            </swiper>

            <view
                class="gd-pin-close"
                bindtap="toggleTips"
            >
                <wxc-icon size="40" type="no" color="rgba(0,0,0,0.1)"></wxc-icon>
            </view>

        </view>
    </wxc-mask>

</view>
