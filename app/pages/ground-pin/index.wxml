<view class="page-ground-pin">

    <!-- 列表 -->
    <scroll-view 
        scroll-y="{{ true }}"
        lower-threshold="100"
        bindscrolltolower="fetchPin"
        class="p-groud-pin"
    >
    </scroll-view>

    <!-- 底下导航条 -->
    <view class="gp-bar">
        <my-ground-bar
        />
    </view>

    <!-- 提示弹框 -->
    <view>
        <my-common-confirm
            title="拼团省钱"
            storageKey="ground-pin"
            open="{{ openTips }}"
            bind:toggle="onToggle"
            texts="{{[ '大家一起购买同一件宝贝', '就能自动获得更便宜的拼团价' ]}}"
        />
    </view>

</view>