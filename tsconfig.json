{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "module": "CommonJS",
    "target": "ES5",
    "lib": [
      "scripthost",
      "es2016",
      "es2017"
    ],
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "strict": true,
    "removeComments": true,
    "pretty": true,
    "strictPropertyInitialization": true,
    "typeRoots": [
      "typings"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "miniprogram_dist",
    "**/*.spec.ts"
  ]
}
